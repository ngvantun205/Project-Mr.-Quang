<Page x:Class="TDEduEnglish.Views.CoursesPageView.CourseListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="800"
      Title="CourseListPage">

    <Page.Resources>
        <!-- Modern Card Style - consistent with other pages -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Card Style for lessons -->
        <Style x:Key="LessonCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF6366F1" Direction="270" 
                                            ShadowDepth="4" BlurRadius="20" Opacity="0.12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style - consistent with MainWindow -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8FAFC"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="#FFF1F5F9"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <Border Background="{TemplateBinding Foreground}" 
                                    CornerRadius="3"
                                    HorizontalAlignment="Left"
                                    Width="{TemplateBinding Value, 
                                            Converter={StaticResource ProgressToWidthConverter}}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Hidden"
                  Padding="0,0,0,20">
        <StackPanel>
            <!-- Course Header Section -->
            <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Course Icon -->
                    <Border Grid.Column="0" Background="#FF6366F1" CornerRadius="16" 
                           Width="80" Height="80" Margin="0,0,20,0">
                        <TextBlock x:Name="CourseIcon" Text="🎯" FontSize="32" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Course Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="CourseTitle" Text="Listening Skills" 
                                  FontSize="28" FontWeight="Bold" 
                                  Foreground="#FF1F2937" Margin="0,0,0,4"/>

                        <TextBlock x:Name="CourseDescription" 
                                  Text="Improve your English listening comprehension with structured exercises"
                                  FontSize="16" Foreground="#FF6B7280" 
                                  TextWrapping="Wrap" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <Border Background="#FFE0F2FE" CornerRadius="12" Padding="8,4" Margin="0,0,8,0">
                                <TextBlock x:Name="DifficultyLevel" Text="Beginner" 
                                          FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF0369A1"/>
                            </Border>
                            <Border Background="#FFECFDF5" CornerRadius="12" Padding="8,4" Margin="0,0,8,0">
                                <TextBlock x:Name="LessonCount" Text="12 Lessons" 
                                          FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF059669"/>
                            </Border>
                            <Border Background="#FFFEF7E7" CornerRadius="12" Padding="8,4">
                                <TextBlock x:Name="Duration" Text="6 Hours" 
                                          FontSize="12" FontWeight="Medium" 
                                          Foreground="#FFD97706"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Progress Section -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" MinWidth="120">
                        <TextBlock Text="Progress" FontSize="14" FontWeight="Medium" 
                                  Foreground="#FF6B7280" Margin="0,0,0,4"/>
                        <TextBlock x:Name="ProgressText" Text="8/12 Completed" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#FF1F2937" Margin="0,0,0,8"/>
                        <ProgressBar x:Name="CourseProgress" Value="67" Maximum="100" Height="6" Background="#FFF1F5F9" Foreground="#FF6366F1"  BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Course Stats -->
            <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Border Background="#FF6366F1" CornerRadius="8" Width="32" Height="32" Margin="0,0,0,8">
                            <TextBlock Text="📊" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="85%" FontSize="20" FontWeight="Bold" 
                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                        <TextBlock Text="Average Score" FontSize="12" 
                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <Border Background="#FF10B981" CornerRadius="8" Width="32" Height="32" Margin="0,0,0,8">
                            <TextBlock Text="⭐" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="4.8" FontSize="20" FontWeight="Bold" 
                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rating" FontSize="12" 
                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <Border Background="#FFF59E0B" CornerRadius="8" Width="32" Height="32" Margin="0,0,0,8">
                            <TextBlock Text="🕒" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="24h" FontSize="20" FontWeight="Bold" 
                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                        <TextBlock Text="Time Spent" FontSize="12" 
                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <Border Background="#FFEF4444" CornerRadius="8" Width="32" Height="32" Margin="0,0,0,8">
                            <TextBlock Text="🏆" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="3" FontSize="20" FontWeight="Bold" 
                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                        <TextBlock Text="Achievements" FontSize="12" 
                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lessons List -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel>
                    <!-- Section Header -->
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Course Lessons" FontSize="20" FontWeight="SemiBold" 
                                  Foreground="#FF1F2937" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Sort by Progress" 
                                   Style="{StaticResource SecondaryButtonStyle}" 
                                   FontSize="14" Margin="0,0,8,0"/>
                            <Button Content="View All" 
                                   Style="{StaticResource PrimaryButtonStyle}" 
                                   FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Lessons Container -->
                    <StackPanel x:Name="LessonsContainer">
                        <!-- Sample Lesson Items -->

                        <!-- Lesson 1 - Completed -->
                        <Border Style="{StaticResource LessonCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Lesson Icon -->
                                <Border Grid.Column="0" Background="#FF10B981" CornerRadius="8" 
                                       Width="40" Height="40" Margin="0,0,16,0">
                                    <TextBlock Text="✓" FontSize="20" Foreground="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Lesson Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Lesson 1: Basic Conversations" 
                                              FontSize="16" FontWeight="Medium" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Learn to understand simple daily conversations" 
                                              FontSize="14" Foreground="#FF6B7280"/>
                                </StackPanel>

                                <!-- Progress -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,16,0">
                                    <TextBlock Text="Completed" FontSize="12" FontWeight="Medium" 
                                              Foreground="#FF10B981" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Score: 92%" FontSize="12" 
                                              Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Action Button -->
                                <Button Grid.Column="3" Content="Review" 
                                       Style="{StaticResource SecondaryButtonStyle}" 
                                       FontSize="14" MinWidth="80"/>
                            </Grid>
                        </Border>

                        <!-- Lesson 2 - In Progress -->
                        <Border Style="{StaticResource LessonCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Lesson Icon -->
                                <Border Grid.Column="0" Background="#FF6366F1" CornerRadius="8" 
                                       Width="40" Height="40" Margin="0,0,16,0">
                                    <TextBlock Text="▶" FontSize="16" Foreground="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Lesson Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Lesson 2: Phone Conversations" 
                                              FontSize="16" FontWeight="Medium" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Understand phone calls and voice messages" 
                                              FontSize="14" Foreground="#FF6B7280"/>
                                </StackPanel>

                                <!-- Progress -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,16,0">
                                    <TextBlock Text="In Progress" FontSize="12" FontWeight="Medium" 
                                              Foreground="#FF6366F1" HorizontalAlignment="Center"/>
                                    <ProgressBar Value="45" Maximum="100" Width="60" Height="4" Margin="0,4,0,0"
                                                Background="#FFF1F5F9" Foreground="#FF6366F1"  BorderThickness="0"/>
                                </StackPanel>

                                <!-- Action Button -->
                                <Button Grid.Column="3" Content="Continue" 
                                       Style="{StaticResource PrimaryButtonStyle}" 
                                       FontSize="14" MinWidth="80"/>
                            </Grid>
                        </Border>

                        <!-- Lesson 3 - Locked -->
                        <Border Style="{StaticResource LessonCardStyle}" Opacity="0.6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Lesson Icon -->
                                <Border Grid.Column="0" Background="#FF9CA3AF" CornerRadius="8" 
                                       Width="40" Height="40" Margin="0,0,16,0">
                                    <TextBlock Text="🔒" FontSize="16" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Lesson Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Lesson 3: Business Meetings" 
                                              FontSize="16" FontWeight="Medium" 
                                              Foreground="#FF6B7280" Margin="0,0,0,4"/>
                                    <TextBlock Text="Complete Lesson 2 to unlock" 
                                              FontSize="14" Foreground="#FF9CA3AF"/>
                                </StackPanel>

                                <!-- Progress -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,16,0">
                                    <TextBlock Text="Locked" FontSize="12" FontWeight="Medium" 
                                              Foreground="#FF9CA3AF" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Action Button -->
                                <Button Grid.Column="3" Content="Locked" 
                                       IsEnabled="False"
                                       Style="{StaticResource SecondaryButtonStyle}" 
                                       FontSize="14" MinWidth="80"/>
                            </Grid>
                        </Border>

                        <!-- More lessons can be dynamically added here -->

                    </StackPanel>

                    <!-- Load More Button -->
                    <Button Content="Load More Lessons" 
                           Style="{StaticResource SecondaryButtonStyle}" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0" 
                           FontSize="14" 
                           Padding="20,10"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
