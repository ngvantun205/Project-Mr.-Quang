<Page x:Class="TDEduEnglish.ViewModels.CoursePageViewModel.CourseReadingListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.ViewModels.CoursePageViewModel"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="CourseReadingListPage">

    <Page.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05" 
                                    BlurRadius="15" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#6366F1" Opacity="0.15" 
                                            BlurRadius="20" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Level Tab Style -->
        <Style x:Key="LevelTabStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" 
                                Background="#F1F5F9"
                                CornerRadius="10"
                                Padding="20,10"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Icon" 
                                         Text="{TemplateBinding Tag}" 
                                         FontSize="18" 
                                         Margin="0,0,6,0"/>
                                <TextBlock x:Name="Text"
                                         Text="{TemplateBinding Content}" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"
                                         Foreground="#64748B"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#6366F1"/>
                                <Setter TargetName="Text" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E7FF"/>
                                <Setter TargetName="Text" Property="Foreground" Value="#6366F1"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#5558E3"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Start Button Style -->
        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5558E3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Level Badge Style -->
        <Style x:Key="LevelBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="#1E293B"
                             Margin="0,0,0,8">
                        <Run Text="📖"/>
                        <Run Text="Reading Practice"/>
                    </TextBlock>
                    <TextBlock Text="Enhance your reading comprehension skills with carefully selected passages" 
                             FontSize="15" 
                             Foreground="#64748B"/>
                </StackPanel>

                <!-- Level Selector -->
                <StackPanel Grid.Row="1" 
                          Orientation="Horizontal" 
                          Margin="0,0,0,24">
                    <RadioButton x:Name="BeginnerTab"
                               Content="Beginner"
                               Tag="🌱"
                               Style="{StaticResource LevelTabStyle}"
                               IsChecked="True"
                               GroupName="LevelTabs"/>
                    <RadioButton x:Name="IntermediateTab"
                               Content="Intermediate"
                               Tag="🚀"
                               Style="{StaticResource LevelTabStyle}"
                               GroupName="LevelTabs"/>
                    <RadioButton x:Name="AdvancedTab"
                               Content="Advanced"
                               Tag="🎯"
                               Style="{StaticResource LevelTabStyle}"
                               GroupName="LevelTabs"/>
                </StackPanel>

                <!-- Content Grid -->
                <Grid Grid.Row="2">
                    <!-- Beginner Content -->
                    <ItemsControl ItemsSource="{Binding BeginnerReadings}"
                                Visibility="{Binding IsChecked, ElementName=BeginnerTab, 
                                           Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCardStyle}" Height="220">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Level Badge -->
                                        <Border Grid.Row="0" 
                                              Style="{StaticResource LevelBadgeStyle}"
                                              Background="#D1FAE5"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10">
                                            <TextBlock Text="Beginner" 
                                                     Foreground="#059669" 
                                                     FontSize="11" 
                                                     FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Title -->
                                        <TextBlock Grid.Row="1" 
                                                 Text="{Binding Title}" 
                                                 FontSize="15" 
                                                 FontWeight="SemiBold" 
                                                 Foreground="#1E293B"
                                                 TextWrapping="Wrap"
                                                 LineHeight="20"
                                                 MaxHeight="60"
                                                 TextTrimming="CharacterEllipsis"
                                                 VerticalAlignment="Top"
                                                 Margin="0,0,0,10"/>

                                        <!-- Stats -->
                                        <StackPanel Grid.Row="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="0,0,0,12">
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4"
                                                  Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⏱️" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding SuggestedTime, StringFormat='{}{0}m'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📝" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding QuestionCount, StringFormat='{}{0}q'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <!-- Action Button -->
                                        <Button Grid.Row="3" 
                                              Content="Start Reading" 
                                              Style="{StaticResource StartButtonStyle}"
                                              HorizontalAlignment="Stretch"
                                              Command="{Binding DataContext.StartReadingCommand, 
                                                      RelativeSource={RelativeSource AncestorType=Page}}"
                                              CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Intermediate Content -->
                    <ItemsControl ItemsSource="{Binding IntermediateReadings}"
                                Visibility="{Binding IsChecked, ElementName=IntermediateTab, 
                                           Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCardStyle}" Height="220">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" 
                                              Style="{StaticResource LevelBadgeStyle}"
                                              Background="#FEF3C7"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10">
                                            <TextBlock Text="Intermediate" 
                                                     Foreground="#D97706" 
                                                     FontSize="11" 
                                                     FontWeight="SemiBold"/>
                                        </Border>

                                        <TextBlock Grid.Row="1" 
                                                 Text="{Binding Title}" 
                                                 FontSize="15" 
                                                 FontWeight="SemiBold" 
                                                 Foreground="#1E293B"
                                                 TextWrapping="Wrap"
                                                 LineHeight="20"
                                                 MaxHeight="60"
                                                 TextTrimming="CharacterEllipsis"
                                                 VerticalAlignment="Top"
                                                 Margin="0,0,0,10"/>

                                        <StackPanel Grid.Row="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="0,0,0,12">
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4"
                                                  Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⏱️" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding SuggestedTime, StringFormat='{}{0}m'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📝" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding QuestionCount, StringFormat='{}{0}q'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <Button Grid.Row="3" 
                                              Content="Start Reading" 
                                              Style="{StaticResource StartButtonStyle}"
                                              HorizontalAlignment="Stretch"
                                              Command="{Binding DataContext.StartReadingCommand, 
                                                      RelativeSource={RelativeSource AncestorType=Page}}"
                                              CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Advanced Content -->
                    <ItemsControl ItemsSource="{Binding AdvancedReadings}"
                                Visibility="{Binding IsChecked, ElementName=AdvancedTab, 
                                           Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCardStyle}" Height="220">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" 
                                              Style="{StaticResource LevelBadgeStyle}"
                                              Background="#FEE2E2"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10">
                                            <TextBlock Text="Advanced" 
                                                     Foreground="#DC2626" 
                                                     FontSize="11" 
                                                     FontWeight="SemiBold"/>
                                        </Border>

                                        <TextBlock Grid.Row="1" 
                                                 Text="{Binding Title}" 
                                                 FontSize="15" 
                                                 FontWeight="SemiBold" 
                                                 Foreground="#1E293B"
                                                 TextWrapping="Wrap"
                                                 LineHeight="20"
                                                 MaxHeight="60"
                                                 TextTrimming="CharacterEllipsis"
                                                 VerticalAlignment="Top"
                                                 Margin="0,0,0,10"/>

                                        <StackPanel Grid.Row="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="0,0,0,12">
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4"
                                                  Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⏱️" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding SuggestedTime, StringFormat='{}{0}m'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#F8FAFC" 
                                                  CornerRadius="5" 
                                                  Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📝" FontSize="11" Margin="0,0,3,0"/>
                                                    <TextBlock Text="{Binding QuestionCount, StringFormat='{}{0}q'}" 
                                                             FontSize="11"
                                                             Foreground="#64748B"
                                                             FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <Button Grid.Row="3" 
                                              Content="Start Reading" 
                                              Style="{StaticResource StartButtonStyle}"
                                              HorizontalAlignment="Stretch"
                                              Command="{Binding DataContext.StartReadingCommand, 
                                                      RelativeSource={RelativeSource AncestorType=Page}}"
                                              CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
