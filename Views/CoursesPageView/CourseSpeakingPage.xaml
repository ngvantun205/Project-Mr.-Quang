<Page x:Class="TDEduEnglish.Views.CoursesPageView.CourseSpeakingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F9FAFB"
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="CourseSpeakingPage">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Progress -->
            <RowDefinition Height="*"/>
            <!-- Main -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="🎤 Speaking Practice" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="#1F2937" />
        </StackPanel>

        <!-- PROGRESS + SCORE -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="{Binding SentenceNumber}" FontSize="16" FontWeight="Bold" Foreground="#2563EB"/>
            <TextBlock Text="/" FontSize="16" Margin="5,0"/>
            <TextBlock Text="{Binding Sentences.Count}" FontSize="16" Foreground="#6B7280"/>
            <ProgressBar Width="250" Height="8" Margin="20,0,20,0"
                         Minimum="0" Maximum="{Binding Sentences.Count}" 
                         Value="{Binding SentenceNumber}" 
                         Background="#E5E7EB" Foreground="#3B82F6"/>
            <Border Background="#2563EB" CornerRadius="8" Padding="8,2" Margin="10,0,0,0">
                <TextBlock Text="{Binding Score, StringFormat='Score: {0:F1}'}" 
                           FontSize="14" Foreground="White"/>
            </Border>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">
            <!-- Sentence -->
            <Border CornerRadius="12" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                <TextBlock Text="{Binding CurrentSentence.SentenceText}" 
                           TextAlignment="Center" 
                           FontSize="20" FontWeight="SemiBold" Foreground="#111827"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Record Button -->
            <Button Content="🎙 Start Speaking"
                    Command="{Binding StartSpeakingCommand}"
                    Background="#2563EB" Foreground="White"
                    FontSize="18" FontWeight="Bold"
                    Padding="10" Width="250" Height="55"
                    BorderBrush="{x:Null}" 
                    Cursor="Hand" Margin="0,10,0,15">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
            </Button>

            <!-- Feedback -->
            <Border CornerRadius="12" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Padding="15" Width="500">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Feedback}" 
                               FontSize="15" Foreground="#374151"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- Next + Submit -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="⏭ Next Sentence" 
                        Command="{Binding NextSentenceCommand}" 
                        Background="#10B981" Foreground="White"
                        FontSize="16" FontWeight="Bold" 
                        Padding="10" Width="180" Height="45"
                        BorderBrush="{x:Null}"  Cursor="Hand" Margin="10,0"/>
                <Button Content="🏁 Finish" 
                        Command="{Binding SubmitCommand}" 
                        Background="#F59E0B" Foreground="White"
                        FontSize="16" FontWeight="Bold" 
                        Padding="10" Width="150" Height="45"
                        BorderBrush="{x:Null}" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
