<Page x:Class="TDEduEnglish.Views.CoursesPageView.CourseSpeakingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="CourseSpeakingPage"
      Background="White">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="🎤 Practice Your Speaking"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#1F2937"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- Câu cần luyện -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="Sentence to Practice:" 
                       FontSize="14" 
                       Foreground="#6B7280"
                       Margin="0,0,0,8"
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ReferenceText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="420"
                     FontSize="16"
                     Padding="10"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderBrush="#E5E7EB"
                     BorderThickness="1"
                     Background="White" />
        </StackPanel>

        <!-- Nút bắt đầu -->
        <Button Grid.Row="2"
                Content="🎙 Start Speaking"
                Command="{Binding StartSpeakingCommand}"
                Background="#2563EB"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Width="220"
                Height="50"
                HorizontalAlignment="Center"
                Margin="0,30,0,20"
                BorderBrush="{x:Null}"
                Cursor="Hand"
                />

        <!-- Feedback -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="12" 
                BorderBrush="#E5E7EB" 
                BorderThickness="1"
                Padding="20"
                Width="420"
                HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Feedback}" 
                           TextWrapping="Wrap"
                           FontSize="15"
                           Foreground="#111827"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
