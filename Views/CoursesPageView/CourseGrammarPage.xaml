<Page x:Class="TDEduEnglish.Views.CoursesPageView.CourseGrammarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="CourseGrammarPage">

    <Page.Resources>
        <!-- Modern Card Style - consistent with CoursesPage -->
        <Style x:Key="GrammarCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Expandable Button Style -->
        <Style x:Key="ExpandableButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sub-lesson Button Style -->
        <Style x:Key="SubLessonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8FAFC"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Difficulty Badge Style -->
        <Style x:Key="DifficultyBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#FFECFDF5"/>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="#FFF1F5F9"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <Grid>
                                <Border Name="PART_Track" Background="{TemplateBinding Background}" CornerRadius="3"/>
                                <Border Name="PART_Indicator" Background="{TemplateBinding Foreground}" 
                                       CornerRadius="3" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Header Section -->
        <StackPanel Margin="20,20,20,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Border Background="#FF10B981" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                    <TextBlock Text="⚙️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Grammar Courses" FontSize="28" FontWeight="Bold" 
                          Foreground="#FF1F2937" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Master English grammar with comprehensive lessons and exercises" 
                      FontSize="14" Foreground="#FF6B7280" Margin="44,0,0,20"/>
        </StackPanel>

        <!-- Scrollable Content -->
        <ScrollViewer Margin="20,100,20,20" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Hidden">
            <StackPanel Width="600" HorizontalAlignment="Center">

                <!-- 1. Parts of Speech -->
                <Border Style="{StaticResource GrammarCardStyle}">
                    <StackPanel>
                        <ToggleButton x:Name="PartsOfSpeechToggle" Style="{StaticResource ExpandableButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="1. Parts of Speech" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,12,0"/>
                                        <Border Style="{StaticResource DifficultyBadgeStyle}">
                                            <TextBlock Text="Beginner" FontSize="10" FontWeight="SemiBold" 
                                                      Foreground="#FF10B981"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Learn about nouns, verbs, adjectives, and other fundamental word types" 
                                              FontSize="13" Foreground="#FF6B7280" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Progress: 65%" FontSize="11" Foreground="#FF6B7280" Margin="0,0,8,0"/>
                                        <ProgressBar Style="{StaticResource ModernProgressBarStyle}" Width="80" Value="65"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <Border Background="#FFEFF6FF" CornerRadius="6" Padding="6,4" Margin="0,0,8,0">
                                        <TextBlock Text="9 lessons" FontSize="10" Foreground="#FF6366F1" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="#FFFEF7E7" CornerRadius="6" Padding="6,4">
                                        <TextBlock Text="45 min" FontSize="10" Foreground="#FFF59E0B" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="▼" FontSize="12" Foreground="#FF6B7280" 
                                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="PartsOfSpeechArrow" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>

                        <StackPanel x:Name="PartsOfSpeechContent" Visibility="Collapsed" Margin="0,16,0,0">
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📝 Nouns - Basic concepts and types"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="👤 Pronouns - Personal, possessive, demonstrative"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🏃 Verbs - Action, linking, and helping verbs"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎨 Adjectives - Descriptive and limiting adjectives"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="⚡ Adverbs - Manner, time, place, and degree"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🌉 Prepositions - Time, place, and direction"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🔗 Conjunctions - Coordinating and subordinating"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="❗ Interjections - Expressions of emotion"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎯 Determiners - Articles, demonstratives, quantifiers"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 2. Sentence Structure -->
                <Border Style="{StaticResource GrammarCardStyle}">
                    <StackPanel>
                        <ToggleButton x:Name="SentenceStructureToggle" Style="{StaticResource ExpandableButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="2. Sentence Structure" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,12,0"/>
                                        <Border Style="{StaticResource DifficultyBadgeStyle}" Background="#FFFEF7E7">
                                            <TextBlock Text="Intermediate" FontSize="10" FontWeight="SemiBold" 
                                                      Foreground="#FFF59E0B"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Master simple, compound, complex, and compound-complex sentences" 
                                              FontSize="13" Foreground="#FF6B7280" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Progress: 40%" FontSize="11" Foreground="#FF6B7280" Margin="0,0,8,0"/>
                                        <ProgressBar Style="{StaticResource ModernProgressBarStyle}" Width="80" Value="40"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <Border Background="#FFEFF6FF" CornerRadius="6" Padding="6,4" Margin="0,0,8,0">
                                        <TextBlock Text="4 lessons" FontSize="10" Foreground="#FF6366F1" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="#FFFEF7E7" CornerRadius="6" Padding="6,4">
                                        <TextBlock Text="30 min" FontSize="10" Foreground="#FFF59E0B" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="▼" FontSize="12" Foreground="#FF6B7280" 
                                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="SentenceStructureArrow" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>

                        <StackPanel x:Name="SentenceStructureContent" Visibility="Collapsed" Margin="0,16,0,0">
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📐 Simple Sentences - Subject + Predicate"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🔗 Compound Sentences - Independent clauses"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🏗️ Complex Sentences - Dependent and independent clauses"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🏛️ Compound-Complex Sentences - Advanced structures"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 3. Tenses -->
                <Border Style="{StaticResource GrammarCardStyle}">
                    <StackPanel>
                        <ToggleButton x:Name="TensesToggle" Style="{StaticResource ExpandableButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="3. Tenses" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,12,0"/>
                                        <Border Style="{StaticResource DifficultyBadgeStyle}" Background="#FFF5F3FF">
                                            <TextBlock Text="Advanced" FontSize="10" FontWeight="SemiBold" 
                                                      Foreground="#FF8B5CF6"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Complete guide to all 12 English tenses with usage and examples" 
                                              FontSize="13" Foreground="#FF6B7280" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Progress: 85%" FontSize="11" Foreground="#FF6B7280" Margin="0,0,8,0"/>
                                        <ProgressBar Style="{StaticResource ModernProgressBarStyle}" Width="80" Value="85"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <Border Background="#FFEFF6FF" CornerRadius="6" Padding="6,4" Margin="0,0,8,0">
                                        <TextBlock Text="12 lessons" FontSize="10" Foreground="#FF6366F1" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="#FFFEF7E7" CornerRadius="6" Padding="6,4">
                                        <TextBlock Text="90 min" FontSize="10" Foreground="#FFF59E0B" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="▼" FontSize="12" Foreground="#FF6B7280" 
                                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="TensesArrow" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>

                        <StackPanel x:Name="TensesContent" Visibility="Collapsed" Margin="0,16,0,0">
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🌅 Present Simple - Daily routines and facts"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🏃 Present Continuous - Current actions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="✅ Present Perfect - Past actions with present relevance"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="⏳ Present Perfect Continuous - Duration till now"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📅 Past Simple - Completed past actions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎬 Past Continuous - Past ongoing actions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📜 Past Perfect - Earlier past actions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📈 Past Perfect Continuous - Duration before past"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🔮 Future Simple - Future predictions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📋 Future Continuous - Future ongoing actions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎯 Future Perfect - Completion by future time"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🌊 Future Perfect Continuous - Duration till future"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 4. Verb Forms & Auxiliaries -->
                <Border Style="{StaticResource GrammarCardStyle}">
                    <StackPanel>
                        <ToggleButton x:Name="VerbFormsToggle" Style="{StaticResource ExpandableButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="4. Verb Forms and Auxiliaries" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,12,0"/>
                                        <Border Style="{StaticResource DifficultyBadgeStyle}" Background="#FFFEF7E7">
                                            <TextBlock Text="Intermediate" FontSize="10" FontWeight="SemiBold" 
                                                      Foreground="#FFF59E0B"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Regular and irregular verbs, auxiliary verbs, and modal verbs" 
                                              FontSize="13" Foreground="#FF6B7280" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Progress: 55%" FontSize="11" Foreground="#FF6B7280" Margin="0,0,8,0"/>
                                        <ProgressBar Style="{StaticResource ModernProgressBarStyle}" Width="80" Value="55"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <Border Background="#FFEFF6FF" CornerRadius="6" Padding="6,4" Margin="0,0,8,0">
                                        <TextBlock Text="7 lessons" FontSize="10" Foreground="#FF6366F1" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="#FFFEF7E7" CornerRadius="6" Padding="6,4">
                                        <TextBlock Text="50 min" FontSize="10" Foreground="#FFF59E0B" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="▼" FontSize="12" Foreground="#FF6B7280" 
                                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="VerbFormsArrow" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>

                        <StackPanel x:Name="VerbFormsContent" Visibility="Collapsed" Margin="0,16,0,0">
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📏 Regular Verbs - Standard conjugation patterns"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎲 Irregular Verbs - Common irregular forms"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🔗 To Be - Am, is, are, was, were"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🤝 Have/Do - Auxiliary functions"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="💪 Can/Could - Ability and permission"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="📋 May/Might - Possibility and permission"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="⚖️ Must/Should - Necessity and advice"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 5. Clauses & Phrases -->
                <Border Style="{StaticResource GrammarCardStyle}">
                    <StackPanel>
                        <ToggleButton x:Name="ClausesPhrasesToggle" Style="{StaticResource ExpandableButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="5. Clauses and Phrases" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,12,0"/>
                                        <Border Style="{StaticResource DifficultyBadgeStyle}" Background="#FFF5F3FF">
                                            <TextBlock Text="Advanced" FontSize="10" FontWeight="SemiBold" 
                                                      Foreground="#FF8B5CF6"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Noun, adjective, adverb clauses and various phrase types" 
                                              FontSize="13" Foreground="#FF6B7280" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Progress: 25%" FontSize="11" Foreground="#FF6B7280" Margin="0,0,8,0"/>
                                        <ProgressBar Style="{StaticResource ModernProgressBarStyle}" Width="80" Value="25"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <Border Background="#FFEFF6FF" CornerRadius="6" Padding="6,4" Margin="0,0,8,0">
                                        <TextBlock Text="5 lessons" FontSize="10" Foreground="#FF6366F1" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="#FFFEF7E7" CornerRadius="6" Padding="6,4">
                                        <TextBlock Text="60 min" FontSize="10" Foreground="#FFF59E0B" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="▼" FontSize="12" Foreground="#FF6B7280" 
                                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="ClausesPhrasesArrow" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>

                        <StackPanel x:Name="ClausesPhrasesContent" Visibility="Collapsed" Margin="0,16,0,0">
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🏠 Noun Clauses - Subject and object clauses"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🎨 Adjective Clauses - Relative clauses"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="⚡ Adverb Clauses - Time, reason, condition"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🌱 Gerund and Infinitive Phrases - Verbal phrases"/>
                            <Button Style="{StaticResource SubLessonButtonStyle}" Content="🍃 Participial Phrases - Present and past participles"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
