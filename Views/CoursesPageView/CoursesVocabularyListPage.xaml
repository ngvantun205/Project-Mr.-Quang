<Page x:Class="TDEduEnglish.Views.CoursesPageView.CoursesVocabularyListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="CoursesVocabularyListPage">

    <Page.Resources>
        <!-- Tab Control Style -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Tab Item Style -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12,12,0,0"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFF8FAFC"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Vocabulary Item Style -->
        <Style x:Key="VocabularyItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Word Text Style -->
        <Style x:Key="WordTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
        </Style>

        <!-- Word Type Style -->
        <Style x:Key="WordTypeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFECFDF5"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- IPA Style -->
        <Style x:Key="IPAStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>

        <!-- Meaning Style -->
        <Style x:Key="MeaningStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Example Style -->
        <Style x:Key="ExampleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- ScrollViewer Style -->
        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="80" VerticalAlignment="Top" Background="White" CornerRadius="0,0,16,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.08"/>
            </Border.Effect>

            <Grid Margin="32,0,32,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="📚 Vocabulary Learning" 
                              FontSize="24" FontWeight="Bold" 
                              Foreground="#FF1F2937"/>
                    <TextBlock Text="Expand your English vocabulary by difficulty level" 
                              FontSize="14" Foreground="#FF6B7280" 
                              Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Progress Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="#FF6366F1" CornerRadius="12" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎯" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CurrentTopic}" FontSize="12" FontWeight="SemiBold" 
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFECFDF5" CornerRadius="12" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⭐" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Progress: 75%" FontSize="12" FontWeight="SemiBold" 
                                      Foreground="#FF10B981"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Margin="32,100,32,32" 
                   Style="{StaticResource ModernTabControl}"
                   Background="Transparent">

            <!-- Beginner Tab -->
            <TabItem Header="🌱 Beginner" Style="{StaticResource ModernTabItem}">
                <Grid Background="Transparent">
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}" Padding="0,16,0,0">
                        <ItemsControl ItemsSource="{Binding BeginnerVocabulary}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource VocabularyItemStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Word and Type Row -->
                                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Word}" 
                                                          Style="{StaticResource WordTextStyle}"/>

                                                <TextBlock Grid.Column="1" Text="{Binding IPATranscription, StringFormat='/{0}/'}" 
                                                          Style="{StaticResource IPAStyle}" 
                                                          Margin="12,0,0,0" VerticalAlignment="Bottom"/>

                                                <Border Grid.Column="3" Style="{StaticResource WordTypeStyle}">
                                                    <TextBlock Text="{Binding WordType}" 
                                                              FontSize="12" FontWeight="SemiBold" 
                                                              Foreground="#FF10B981"/>
                                                </Border>
                                            </Grid>

                                            <!-- Meaning Row -->
                                            <TextBlock Grid.Row="1" Text="{Binding Meaning}" 
                                                      Style="{StaticResource MeaningStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Example Row -->
                                            <TextBlock Grid.Row="2" Text="{Binding ExampleSentence, StringFormat='Example: {0}'}" 
                                                      Style="{StaticResource ExampleStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="🔊" ToolTip="Pronunciation" Command="{Binding DataContext.WordPronunciationCommand,  RelativeSource={RelativeSource AncestorType=Page}}"  CommandParameter="{Binding}"
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FF6366F1" FontSize="14"
                                                       Cursor="Hand" Margin="0,0,8,0"/>
                                                <Button Content="⭐" ToolTip="Add to favorites" 
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FFF59E0B" FontSize="14"
                                                       Cursor="Hand"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Intermediate Tab -->
            <TabItem Header="🚀 Intermediate" Style="{StaticResource ModernTabItem}">
                <Grid Background="Transparent">
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}" Padding="0,16,0,0">
                        <ItemsControl ItemsSource="{Binding IntermediateVocabulary}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource VocabularyItemStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Word and Type Row -->
                                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Word}" 
                                                          Style="{StaticResource WordTextStyle}"/>

                                                <TextBlock Grid.Column="1" Text="{Binding IPATranscription, StringFormat='/{0}/'}" 
                                                          Style="{StaticResource IPAStyle}" 
                                                          Margin="12,0,0,0" VerticalAlignment="Bottom"/>

                                                <Border Grid.Column="3" Background="#FFFEF3C7" CornerRadius="6" Padding="8,4">
                                                    <TextBlock Text="{Binding WordType}" 
                                                              FontSize="12" FontWeight="SemiBold" 
                                                              Foreground="#FFF59E0B"/>
                                                </Border>
                                            </Grid>

                                            <!-- Meaning Row -->
                                            <TextBlock Grid.Row="1" Text="{Binding Meaning}" 
                                                      Style="{StaticResource MeaningStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Example Row -->
                                            <TextBlock Grid.Row="2" Text="{Binding ExampleSentence, StringFormat='Example: {0}'}" 
                                                      Style="{StaticResource ExampleStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="🔊" ToolTip="Pronunciation" 
                                                        Command="{Binding DataContext.WordPronunciationCommand,    RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}"
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FF6366F1" FontSize="14"
                                                       Cursor="Hand" Margin="0,0,8,0"/>
                                                <Button Content="⭐" ToolTip="Add to favorites" 
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FFF59E0B" FontSize="14"
                                                       Cursor="Hand"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Advanced Tab -->
            <TabItem Header="🎓 Advanced" Style="{StaticResource ModernTabItem}">
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}" Padding="0,16,0,0">
                        <ItemsControl ItemsSource="{Binding AdvancedVocabulary}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource VocabularyItemStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Word and Type Row -->
                                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Word}" 
                                                          Style="{StaticResource WordTextStyle}"/>

                                                <TextBlock Grid.Column="1" Text="{Binding IPATranscription, StringFormat='/{0}/'}" 
                                                          Style="{StaticResource IPAStyle}" 
                                                          Margin="12,0,0,0" VerticalAlignment="Bottom"/>

                                                <Border Grid.Column="3" Background="#FFEDE9FE" CornerRadius="6" Padding="8,4">
                                                    <TextBlock Text="{Binding WordType}" 
                                                              FontSize="12" FontWeight="SemiBold" 
                                                              Foreground="#FF8B5CF6"/>
                                                </Border>
                                            </Grid>

                                            <!-- Meaning Row -->
                                            <TextBlock Grid.Row="1" Text="{Binding Meaning}" 
                                                      Style="{StaticResource MeaningStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Example Row -->
                                            <TextBlock Grid.Row="2" Text="{Binding ExampleSentence, StringFormat='Example: {0}'}" 
                                                      Style="{StaticResource ExampleStyle}"
                                                      Margin="0,0,0,12"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="🔊" ToolTip="Pronunciation" 
                                                        Command="{Binding DataContext.WordPronunciationCommand,    RelativeSource={RelativeSource AncestorType=Page}}"  CommandParameter="{Binding}"
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FF6366F1" FontSize="14"
                                                       Cursor="Hand" Margin="0,0,8,0"/>
                                                <Button Content="⭐" ToolTip="Add to favorites" 
                                                       Width="32" Height="32" 
                                                       Background="Transparent" BorderThickness="0"
                                                       Foreground="#FFF59E0B" FontSize="14"
                                                       Cursor="Hand"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
