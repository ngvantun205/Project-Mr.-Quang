<Page x:Class="TDEduEnglish.Views.CoursesPageView.CourseWritingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Background="#F8FAFC"
      Title="CourseWritingPage">

    <Page.Resources>
        <!-- Tab Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                CornerRadius="10,10,0,0"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent">
                            <ContentPresenter ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#6366F1"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#6366F1"/>
                                <Setter Property="Panel.ZIndex" Value="1"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5558E3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- History Card Style -->
        <Style x:Key="HistoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05" 
                                    BlurRadius="15" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="40,30,40,0">
            <TextBlock FontSize="32" 
                     FontWeight="Bold" 
                     Foreground="#1E293B"
                     Margin="0,0,0,8">
                <Run Text="✍️"/>
                <Run Text="Writing Practice"/>
            </TextBlock>
            <TextBlock Text="Improve your writing skills with AI-powered feedback" 
                     FontSize="15" 
                     Foreground="#64748B"
                     Margin="0,0,0,24"/>
        </StackPanel>

        <!-- TabControl -->
        <TabControl Grid.Row="1" 
                   Margin="40,0,40,40"
                   Background="Transparent"
                   BorderThickness="0">

            <!-- AI Grading Tab -->
            <TabItem Header="✨ AI Grading" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Writing Input -->
                    <Border Grid.Column="0" 
                           Background="White" 
                           CornerRadius="12"
                           Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.05" 
                                            BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header with New Button -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Your Writing" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="#1E293B"
                                         VerticalAlignment="Center"/>
                                <Button Content="+ New Writing" Command="{Binding NewWritingCommand}"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Topic Input -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                                <TextBlock Text="Topic / Question" 
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Foreground="#64748B"
                                         Margin="0,0,0,8"/>
                                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                       MinHeight="80"
                                       MaxHeight="120"
                                       Text="{Binding WritingTopic, UpdateSourceTrigger=PropertyChanged}"
                                       TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Writing Input -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Your Answer" 
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Foreground="#64748B"
                                         Margin="0,0,0,8"/>
                                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                       MinHeight="300"
                                       Text="{Binding WritingText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Submit Button -->
                            <Button Grid.Row="3" 
                                  Content="🤖 Get AI Feedback"
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,20,0,0"
                                  Command="{Binding GradeWritingCommand}"/>
                        </Grid>
                    </Border>

                    <!-- Right Panel - Feedback -->
                    <Border Grid.Column="2" 
                           Background="White" 
                           CornerRadius="12"
                           Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.05" 
                                            BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0"
                                     Text="AI Feedback" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="#1E293B"
                                     Margin="0,0,0,20"/>

                            <!-- Feedback Content -->
                            <ScrollViewer Grid.Row="1" 
                                        VerticalScrollBarVisibility="Auto">
                                <Border Background="#F8FAFC"
                                      CornerRadius="8"
                                      Padding="20"
                                      MinHeight="400">
                                    <TextBlock Text="{Binding Content}"
                                             FontSize="14"
                                             Foreground="#475569"
                                             TextWrapping="Wrap"
                                             LineHeight="24"  >
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Foreground" Value="#94A3B8"/>
                                                        <Setter Property="FontStyle" Value="Italic"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- History Tab -->
            <TabItem Header="📚 History" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - History List -->
                    <ScrollViewer Grid.Column="0" 
                                VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding WritingHistoryList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                          CornerRadius="12"
                                          Padding="16"
                                          Margin="0,0,0,12"
                                          Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#000000" Opacity="0.04" 
                                                                        BlurRadius="10" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#6366F1" Opacity="0.15" 
                                                                                BlurRadius="15" ShadowDepth="0"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="Background" Value="#FAFBFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Date Badge -->
                                            <Border Grid.Row="0"
                                                  Background="#EEF2FF"
                                                  CornerRadius="6"
                                                  Padding="8,4"
                                                  HorizontalAlignment="Left"
                                                  Margin="0,0,0,10">
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}"
                                                         FontSize="11"
                                                         FontWeight="SemiBold"
                                                         Foreground="#6366F1"/>
                                            </Border>

                                            <!-- Preview Text -->
                                            <TextBlock Grid.Row="1"
                                                     Text="{Binding Text}"
                                                     FontSize="13"
                                                     Foreground="#1E293B"
                                                     TextWrapping="Wrap"
                                                     LineHeight="18"
                                                     MaxHeight="54"
                                                     TextTrimming="CharacterEllipsis"
                                                     Margin="0,0,0,10"/>

                                            <!-- View Details Arrow -->
                                            <StackPanel Grid.Row="2" 
                                                      Orientation="Horizontal"
                                                      HorizontalAlignment="Right">
                                                <Button Content="View details" Command="{Binding DataContext.ViewDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                         FontSize="12"
                                                         Foreground="#6366F1"
                                                         FontWeight="Medium"
                                                         Margin="0,0,4,0"/>
                                                <TextBlock Text="→"
                                                         FontSize="12"
                                                         Foreground="#6366F1"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Right Panel - Detail View -->
                    <Border Grid.Column="2"
                          Background="White"
                          CornerRadius="12"
                          Padding="32">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.05" 
                                            BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Empty State / Header -->
                            <StackPanel Grid.Row="0" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0,100,0,0">
                                <TextBlock Text="📝"
                                         FontSize="64"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,16"/>
                                <TextBlock Text="Select a writing to view details"
                                         FontSize="16"
                                         Foreground="#94A3B8"
                                         FontWeight="Medium"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Click on any item from the list to see the full writing and feedback"
                                         FontSize="13"
                                         Foreground="#CBD5E1"
                                         TextAlignment="Center"
                                         HorizontalAlignment="Center"
                                         TextWrapping="Wrap"
                                         MaxWidth="300"/>
                            </StackPanel>

                             <!--Detail Content (Hidden by default, show when item selected) 
                             You can bind this to SelectedItem and show/hide accordingly-->

                            <Grid Background="White" Grid.Row="0" Grid.RowSpan="3" Visibility="{Binding ShowWritingDetail, Converter={StaticResource BoolToVisibilityConverter}}" >
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <TextBlock Text="Your Writing" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="#1E293B"
                                                 Margin="0,0,0,16"/>
                                        <Border Background="#F9FAFC"
                                              CornerRadius="8"
                                              Padding="20"
                                              Margin="0,0,0,24">
                                            <TextBlock Text="{Binding CurrentText}"
                                                     FontSize="14"
                                                     Foreground="#475569"
                                                     TextWrapping="Wrap"
                                                     LineHeight="22"/>
                                        </Border>

                                        <TextBlock Text="AI Feedback" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="#1E293B"
                                                 Margin="0,0,0,16"/>
                                        <Border Background="#ECFDF5"
                                              BorderBrush="#10B981"
                                              BorderThickness="2"
                                              CornerRadius="8"
                                              Padding="20">
                                            <TextBlock Text="{Binding CurrentFeedback}"
                                                     FontSize="14"
                                                     Foreground="#065F46"
                                                     TextWrapping="Wrap"
                                                     LineHeight="22"/>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                            
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>