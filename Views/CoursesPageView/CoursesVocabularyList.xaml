<Page x:Class="TDEduEnglish.Views.CoursesPageView.CoursesVocabularyListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.CoursesPageView"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoursesVocabularyListPage">

    <Grid>
        <!-- Tiêu đề trang - Đặt bên ngoài ScrollViewer để luôn cố định trên cùng -->
        <TextBlock Text="Vocabulary List"
             FontSize="28" 
             FontWeight="Bold" 
             Foreground="#FF2E86C1" 
             HorizontalAlignment="Center" 
             Margin="0,20,0,0" 
             VerticalAlignment="Top"/>

        <!-- ScrollViewer bao bọc toàn bộ nội dung cuộn được -->
        <!-- Căn lề trên 70 để không đè lên tiêu đề -->
        <ScrollViewer Margin="0,70,0,0" 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                Padding="2">

            <ItemsControl ItemsSource="{Binding VocabList}">
                <!-- Thay đổi Template để loại bỏ hoàn toàn style mặc định -->
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ItemsPresenter/>
                    </ControlTemplate>
                </ItemsControl.Template>

                <!-- Kiểu mẫu cho mỗi mục -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Mỗi thẻ từ vựng là một Border với shadow và bo góc -->
                        <Border Margin="10,5" 
                          CornerRadius="10" 
                          Background="White" 
                          BorderThickness="1" 
                          BorderBrush="#FFD0D0D0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" 
                                            Color="#CCCCCC" 
                                            Opacity="0.5" 
                                            BlurRadius="5"/>
                            </Border.Effect>

                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Cho hình ảnh -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Cho nội dung chữ -->
                                </Grid.ColumnDefinitions>

                                <!-- Hình ảnh minh họa -->
                                <Image Grid.Column="0" 
                                 Source="{Binding ImageUrl}" 
                                 Width="60" 
                                 Height="60" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,15,0" 
                                 RenderOptions.BitmapScalingMode="HighQuality"/>

                                <!-- Nội dung chính của thẻ -->
                                <StackPanel Grid.Column="1">
                                    <!-- Từ vựng -->
                                    <TextBlock Text="{Binding Word}" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="#FF2C3E50"/>

                                    <!-- Nghĩa của từ -->
                                    <TextBlock Text="{Binding Meaning}" 
                                         FontSize="14" 
                                         Foreground="#FF7F8C8D" 
                                         Margin="0,5,0,0" 
                                         TextWrapping="Wrap"/>

                                    <!-- Ví dụ (hiển thị trong ô nhấn mạnh) -->
                                    <Border Margin="0,10,0,0" 
                                      Background="#FFEAFAF1" 
                                      CornerRadius="5" 
                                      Padding="8">
                                        <TextBlock Text="{Binding Example}" 
                                             FontStyle="Italic" 
                                             Foreground="#FF27AE60" 
                                             TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
