<Page x:Class="TDEduEnglish.Views.SuperAdmin.ReadingManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.SuperAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="ReadingManagementPage">

    <Page.Resources>
        <!-- Reuse the same button styles from SuperAdminWindow -->
        <Style x:Key="CompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF6366F1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFEF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFDC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFB91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FFF8FAFC">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                <!-- Page Header -->
                <Grid Margin="0,0,0,24">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="📚 Reading Lessons Management" 
                                  FontSize="24" FontWeight="Bold" 
                                  Foreground="#FF1F2937"/>
                        <TextBlock Text="Manage reading lessons, content, and questions" 
                                  FontSize="14" 
                                  Foreground="#FF6B7280" 
                                  Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <!-- Search -->
                        <Border Background="White" CornerRadius="8" 
                               Height="36" Width="240" Margin="0,0,12,0"
                               BorderThickness="1" BorderBrush="#FFE5E7EB">
                            <Grid>
                                <TextBox x:Name="SearchTextBox"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Margin="12,0,36,0"
                                        FontSize="14"
                                        Foreground="#FF374151"
                                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="Search reading lessons..." 
                                          FontSize="14" 
                                          Foreground="#FF9CA3AF"
                                          VerticalAlignment="Center"
                                          Margin="12,0,36,0"
                                          IsHitTestVisible="False"
                                          Visibility="{Binding ElementName=SearchTextBox, Path=Text.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <Button HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Command="{Binding SearchCommand}"
                                       Style="{StaticResource SmallIconButtonStyle}">
                                    <TextBlock Text="🔍" FontSize="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <Button Content="+ Add Reading Lesson" 
                               Command="{Binding CreateReadingLessonCommand}" 
                               Style="{StaticResource CompactButtonStyle}"
                               Height="36" Margin="0,0,8,0"/>

                        <Button Content="+ Add Reading Question" 
                               Command="{Binding ImportFromJsonCommand}" 
                               Style="{StaticResource SecondaryCompactButtonStyle}"
                               Height="36"/>
                        
                    </StackPanel>
                </Grid>

                <!-- Quick Stats -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Reading Lessons -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" 
                           Padding="20" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="📚" FontSize="24" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding TotalReadingLessonsGrowth}" FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            </Grid>
                            <TextBlock Text="{Binding TotalReadingLessons}" FontSize="28" FontWeight="Bold" 
                                      Foreground="#FF1F2937" Margin="0,8,0,4"/>
                            <TextBlock Text="Total Reading Lessons" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Questions -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" 
                           Padding="20" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="❓" FontSize="24" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding TotalQuestionsGrowth}" FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            </Grid>
                            <TextBlock Text="{Binding TotalQuestions}" FontSize="28" FontWeight="Bold" 
                                      Foreground="#FF1F2937" Margin="0,8,0,4"/>
                            <TextBlock Text="Total Questions" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </Border>

                    <!-- Levels Available -->
                    <Border Grid.Column="2" Background="White" CornerRadius="12" 
                           Padding="20" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Left"/>
                                <TextBlock Text="100%" FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            </Grid>
                            <TextBlock Text="{Binding LevelsCount}" FontSize="28" FontWeight="Bold" 
                                      Foreground="#FF1F2937" Margin="0,8,0,4"/>
                            <TextBlock Text="Levels Available" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Time -->
                    <Border Grid.Column="3" Background="White" CornerRadius="12" 
                           Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="⏱️" FontSize="24" HorizontalAlignment="Left"/>
                                <TextBlock Text="Avg." FontSize="12" FontWeight="Medium" 
                                          Foreground="#FF6B7280" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            </Grid>
                            <TextBlock Text="{Binding AverageReadingTime}" FontSize="28" FontWeight="Bold" 
                                      Foreground="#FF1F2937" Margin="0,8,0,4"/>
                            <TextBlock Text="Average Reading Time" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Content -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Reading Lessons Table -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" 
                           Padding="24" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Reading Lessons" FontSize="18" FontWeight="SemiBold" 
                                          Foreground="#FF1F2937"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!-- Level Filter -->
                                    <ComboBox x:Name="LevelFilterComboBox"
                                             SelectedItem="{Binding SelectedLevelFilter}"
                                             ItemsSource="{Binding LevelFilters}"
                                             Width="100" Height="32" Margin="0,0,8,0"
                                             FontSize="12"/>
                                    <Button Content="🔄 Refresh" 
                                           Command="{Binding RefreshCommand}"
                                           Style="{StaticResource SecondaryCompactButtonStyle}"
                                           Height="32" Width="90"/>
                                </StackPanel>
                            </Grid>

                            <DataGrid AutoGenerateColumns="False" 
                                     ItemsSource="{Binding ReadingLessons}"
                                     SelectedItem="{Binding SelectedReadingLesson}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     GridLinesVisibility="None"
                                     HeadersVisibility="Column"
                                     RowHeaderWidth="0"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     CanUserResizeRows="False"
                                     SelectionMode="Single"
                                     FontSize="13"
                                     MaxHeight="500">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#FFF9FAFB"/>
                                        <Setter Property="Foreground" Value="#FF6B7280"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#FF374151"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF9FAFB"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FFEFF6FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ReadingLessonId}" Width="60"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                                    <DataGridTextColumn Header="Questions" Binding="{Binding Questions.Count}" Width="80"/>
                                    <DataGridTextColumn Header="Time" Binding="{Binding SuggestedTime, StringFormat={}{0:mm}min}" Width="80"/>
                                    <DataGridTemplateColumn Header="Actions" Width="180">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="👁️" 
                                                           Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                           CommandParameter="{Binding}"
                                                           Style="{StaticResource SmallIconButtonStyle}"
                                                           ToolTip="View Details" Margin="0,0,4,0"/>
                                                    <Button Content="✏️" 
                                                           Command="{Binding DataContext.EditReadingLessonCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                           CommandParameter="{Binding}"
                                                           Style="{StaticResource SmallIconButtonStyle}"
                                                           ToolTip="Edit" Margin="0,0,4,0"/>
                                                    <Button Content="❓" 
                                                           Command="{Binding DataContext.ManageQuestionsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                           CommandParameter="{Binding}"
                                                           Style="{StaticResource SmallIconButtonStyle}"
                                                           ToolTip="Manage Questions" Margin="0,0,4,0"/>
                                                    <Button Content="🗑️" 
                                                           Command="{Binding DataContext.DeleteReadingLessonCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                           CommandParameter="{Binding}"
                                                           Style="{StaticResource SmallIconButtonStyle}"
                                                           ToolTip="Delete" Foreground="#FFEF4444"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Reading Lesson Details Panel -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Lesson Details" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937" Margin="0,0,0,16"/>

                            <!-- Show details when a lesson is selected -->
                            <StackPanel >
                                <!-- Lesson Info -->
                                <Grid Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="Title" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#FF6B7280"/>
                                        <TextBlock Text="{Binding SelectedReadingLesson.Title}" 
                                                  FontSize="14" FontWeight="Medium" 
                                                  Foreground="#FF1F2937" 
                                                  TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Level" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#FF6B7280"/>
                                        <Border Background="#FFEFF6FF" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding SelectedReadingLesson.Level}" 
                                                      FontSize="12" FontWeight="Medium" 
                                                      Foreground="#FF6366F1"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Time" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#FF6B7280"/>
                                        <TextBlock Text="{Binding SelectedReadingLesson.SuggestedTime, StringFormat={}{0:mm} minutes}" 
                                                  FontSize="12" 
                                                  Foreground="#FF6B7280" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Content Preview -->
                                <Grid Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="Content Preview" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#FF6B7280"/>
                                        <Border Background="#FFF9FAFB" CornerRadius="6" Padding="8" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding SelectedReadingLesson.Content}" 
                                                      FontSize="12" 
                                                      Foreground="#FF374151" 
                                                      TextWrapping="Wrap"
                                                      MaxHeight="100"
                                                      TextTrimming="WordEllipsis"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Questions Count -->
                                <Grid Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Questions" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#FF6B7280"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding SelectedReadingLesson.Questions.Count}" 
                                                      FontSize="18" FontWeight="Bold" 
                                                      Foreground="#FF6366F1"/>
                                            <TextBlock Text=" questions available" 
                                                      FontSize="12" 
                                                      Foreground="#FF6B7280" 
                                                      VerticalAlignment="Bottom" Margin="4,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!-- Action Buttons -->
                                <StackPanel>
                                    <Button Content="✏️ Edit Lesson" 
                                           Command="{Binding EditReadingLessonCommand}"
                                           CommandParameter="{Binding SelectedReadingLesson}"
                                           Style="{StaticResource CompactButtonStyle}"
                                           HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>

                                    <Button Content="❓ Manage Questions" 
                                           Command="{Binding ManageQuestionsCommand}"
                                           CommandParameter="{Binding SelectedReadingLesson}"
                                           Style="{StaticResource SuccessCompactButtonStyle}"
                                           HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>

                                    <Button Content="📄 Export to JSON" 
                                           Command="{Binding ExportToJsonCommand}"
                                           CommandParameter="{Binding SelectedReadingLesson}"
                                           Style="{StaticResource SecondaryCompactButtonStyle}"
                                           HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>

                                    <Button Content="🗑️ Delete Lesson" 
                                           Command="{Binding DeleteReadingLessonCommand}"
                                           CommandParameter="{Binding SelectedReadingLesson}"
                                           Style="{StaticResource DangerCompactButtonStyle}"
                                           HorizontalAlignment="Stretch" Height="36"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Show message when no lesson is selected -->
                            <StackPanel 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📚" FontSize="48" 
                                          Foreground="#FFE5E7EB" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Select a reading lesson" FontSize="14" 
                                          Foreground="#FF9CA3AF" 
                                          HorizontalAlignment="Center" 
                                          Margin="0,8,0,0"/>
                                <TextBlock Text="to view details" FontSize="14" 
                                          Foreground="#FF9CA3AF" 
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
