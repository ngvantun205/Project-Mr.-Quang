<Window x:Class="TDEduEnglish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish"
        mc:Ignorable="d"
        Title="EduLingua" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF6366F1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Profile Button Style -->
        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Notification Badge Style -->
        <Style x:Key="NotificationBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFEF4444"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,-4,-4,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header with enhanced glassmorphism effect -->
        <Border Height="80" VerticalAlignment="Top" Panel.ZIndex="10">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.98"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="15" Opacity="0.08"/>
            </Border.Effect>

            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="32,0,0,0">
                    <Border Background="#FF6366F1" CornerRadius="12" Width="48" Height="48" Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Text="TD" FontSize="18" FontWeight="Bold" 
                                  Foreground="White" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="TDEdu" FontSize="28" FontWeight="Bold" 
                                  Foreground="#FF1F2937"/>
                        <TextBlock Text="Smart Learning Platform" FontSize="11" 
                                  Foreground="#FF6B7280" Margin="0,-2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Menu -->
                <Menu Margin="150 0 0 0" Grid.Column="1" Background="Transparent" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      FontSize="15" Width="571">
                    <MenuItem Header="🏠 Home" Command="{Binding NavigateCommand}" 
                             CommandParameter="HomePage" Style="{StaticResource ModernMenuItemStyle}"/>
                    <MenuItem Header="📚 Courses" Command="{Binding NavigateCommand}" 
                             CommandParameter="CoursesPage" Style="{StaticResource ModernMenuItemStyle}"/>
                    <MenuItem Header="🎯 Quizzes" Command="{Binding NavigateCommand}" 
                             CommandParameter="QuizzesPage" Style="{StaticResource ModernMenuItemStyle}"/>
                    <MenuItem Header="🏆 Leaderboard" Command="{Binding NavigateCommand}" 
                             CommandParameter="LeaderboardPage" Style="{StaticResource ModernMenuItemStyle}"/>
                </Menu>

                <!-- Right Section with Auth Buttons and User Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,32,0">


                    <!-- Logged In Mode - Notifications and Profile -->
                    <StackPanel Orientation="Horizontal" 
                               Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">

                        <!-- Notifications Button -->
                        <Grid Margin="0,0,16,0">
                            <Button Command="{Binding NotificationCommand}"
                                   Style="{StaticResource IconButtonStyle}"
                                   ToolTip="Thông báo">
                                <TextBlock Text="🔔" FontSize="18"/>
                            </Button>
                            <!-- Notification Badge -->
                            <Border Style="{StaticResource NotificationBadge}"
                                   Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding NotificationCount}" 
                                          FontSize="10" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <!-- User Profile Menu -->
                        <Grid>
                            <Button Command="{Binding ProfileCommand}"
                                   Style="{StaticResource ProfileButtonStyle}"
                                   ToolTip="{Binding UserDisplayName}">
                                <TextBlock Text="{Binding UserInitials}" 
                                          FontSize="14" FontWeight="SemiBold"/>
                            </Button>

                            <!-- Profile Dropdown Menu (can be implemented as Popup) -->
                            <Popup x:Name="ProfilePopup" 
                                   PlacementTarget="{Binding ElementName=ProfileButton}"
                                   Placement="Bottom"
                                   IsOpen="{Binding IsProfileMenuOpen}"
                                   StaysOpen="False">
                                <Border Background="White" 
                                       CornerRadius="12" 
                                       Padding="8"
                                       MinWidth="200">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.15"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="12,8">
                                            <Border Background="#FF6366F1" CornerRadius="16" Width="32" Height="32" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding UserInitials}" 
                                                          FontSize="12" FontWeight="SemiBold" 
                                                          Foreground="White" HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding UserDisplayName}" 
                                                          FontWeight="SemiBold" FontSize="14" 
                                                          Foreground="#FF1F2937"/>
                                                <TextBlock Text="{Binding UserEmail}" 
                                                          FontSize="12" 
                                                          Foreground="#FF6B7280"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Separator Margin="8,4" Background="#FFF1F5F9"/>

                                        <Button Content="👤 Hồ sơ cá nhân" 
                                               Command="{Binding ViewProfileCommand}"
                                               Style="{StaticResource IconButtonStyle}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left"
                                               Height="36" Margin="4"/>

                                        <Button Content="⚙️ Cài đặt" 
                                               Command="{Binding SettingsCommand}"
                                               Style="{StaticResource IconButtonStyle}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left"
                                               Height="36" Margin="4"/>

                                        <Button Content="📊 Tiến độ học tập" 
                                               Command="{Binding ProgressCommand}"
                                               Style="{StaticResource IconButtonStyle}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left"
                                               Height="36" Margin="4"/>

                                        <Separator Margin="8,4" Background="#FFF1F5F9"/>

                                        <Button Content="🚪 Đăng xuất" 
                                               Command="{Binding LogoutCommand}"
                                               Style="{StaticResource IconButtonStyle}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left"
                                               Height="36" Margin="4"
                                               Foreground="#FFEF4444"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                        <StackPanel Margin="10 0 0 0" Orientation="Horizontal" >
                            <Button Content="Log out" FontSize="14" 
                               Command="{Binding LogoutCommand}" 
                               Style="{StaticResource ModernButtonStyle}"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="0,80,0,0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FAFC" Offset="0"/>
                    <GradientStop Color="#FFF1F5F9" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Hero Section -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Content -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" 
                           Margin="80,0,40,0">
                    <TextBlock Text="Welcome to" 
                              FontSize="24" Foreground="#FF6B7280" 
                              Margin="0,0,0,8"/>

                    <TextBlock Text="TDEdu" 
                              FontSize="48" FontWeight="Bold" 
                              Foreground="#FF1F2937" 
                              Margin="0,0,0,8"/>

                    <TextBlock Text="Study English Efficiently" 
                              FontSize="40" FontWeight="Bold" 
                              Foreground="#FF6366F1" 
                              Margin="0,0,0,24"/>

                    <TextBlock Text="Discover a modern way to learn English with advanced AI technology. Improve your language skills in a fun and effective way."
                              FontSize="18" Foreground="#FF6B7280" 
                              TextWrapping="Wrap" LineHeight="28"
                              Margin="0,0,0,32"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Study now" 
                               FontSize="16" Height="50" Width="180"
                               Command="{Binding StartLearningCommand}" 
                               Style="{StaticResource ModernButtonStyle}"
                               Margin="0,0,16,0"/>

                        <Button Content="Learn more" 
                               FontSize="16" Height="50" Width="150"
                               Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Orientation="Horizontal" Margin="0,40,0,0">
                        <StackPanel Margin="0,0,40,0">
                            <TextBlock Text="10K+" FontSize="24" FontWeight="Bold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Students" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,40,0">
                            <TextBlock Text="500+" FontSize="24" FontWeight="Bold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Courses" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="98%" FontSize="24" FontWeight="Bold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Pleasure" FontSize="14" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>


                <Grid Grid.Column="1" Margin="40,0,80,0">
                    <Border CornerRadius="20" Background="White" 
                           Padding="40" VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="270" 
                                            ShadowDepth="10" BlurRadius="30" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Ellipse Fill="#FFF3F4F6" Width="300" Height="300" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Background="#FF6366F1" CornerRadius="50" 
                                       Width="100" Height="100" Margin="0,0,0,20">
                                    <TextBlock Text="📚" FontSize="48" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="Smart Learning" 
                                          FontSize="20" FontWeight="SemiBold" 
                                          Foreground="#FF1F2937" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>

                                <TextBlock Text="With AI and Machine Learning" 
                                          FontSize="14" Foreground="#FF6B7280" 
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Floating Elements -->
                            <Border Background="#FF10B981" CornerRadius="10" 
                                   Width="60" Height="60" 
                                   HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Margin="20,40,0,0">
                                <TextBlock Text="✓" FontSize="24" Foreground="White"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF59E0B" CornerRadius="10" 
                                   Width="60" Height="60" 
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                   Margin="0,0,20,40">
                                <TextBlock Text="⭐" FontSize="24" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <Frame x:Name="MainFrame" Grid.ColumnSpan="2" 
                      NavigationUIVisibility="Hidden" 
                      Margin="0,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>