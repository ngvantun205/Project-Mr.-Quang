<Window x:Class="TDEduEnglish.Views.Windows.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.Windows"
        xmlns:converters="clr-namespace:TDEduEnglish.Converters"
        mc:Ignorable="d"
        Title="QuizWindow" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF6366F1"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="QuestionNumberButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="270" 
                                            ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" 
                                          CenterX="26" CenterY="26"/>
                                </Border.RenderTransform>

                                <Grid>
                                    <TextBlock x:Name="NumberText"
                                      Text="{TemplateBinding Content}"
                                      FontSize="{TemplateBinding FontSize}"
                                      FontWeight="{TemplateBinding FontWeight}"
                                      Foreground="{TemplateBinding Foreground}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

                                    <!-- Flag Icon -->
                                    <TextBlock x:Name="FlagIcon"
                                      Text="🚩"
                                      FontSize="16"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Top"
                                      Margin="0,-6,-6,0"
                                      Visibility="Collapsed">
                                        <TextBlock.RenderTransform>
                                            <ScaleTransform x:Name="FlagScale" ScaleX="0" ScaleY="0"
                                                  CenterX="8" CenterY="8"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>

                                    <!-- Answered Checkmark -->
                                    <Border x:Name="CheckmarkBorder"
                                   Background="#FF10B981"
                                   CornerRadius="10"
                                   Width="20" Height="20"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="0,0,-6,-6"
                                   Visibility="Collapsed">
                                        <TextBlock Text="✓"
                                          FontSize="12"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="MainBorder" Property="Background" Value="#FFF8FAFC"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleX"
                                                   To="1.08" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleY"
                                                   To="1.08" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleX"
                                                   To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleY"
                                                   To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Current Question State -->
                            <DataTrigger Binding="{Binding IsCurrentQuestion}" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#FF6366F1"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="NumberText" Property="Foreground" Value="White"/>
                            </DataTrigger>

                            <!-- Flagged State -->
                            <DataTrigger Binding="{Binding IsFlagged}" Value="True">
                                <Setter TargetName="FlagIcon" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#FFFBBF24"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="FlagScale"
                                                   Storyboard.TargetProperty="ScaleX"
                                                   From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="FlagScale"
                                                   Storyboard.TargetProperty="ScaleY"
                                                   From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <!-- Answered State -->
                            <DataTrigger Binding="{Binding IsAnswered}" Value="True">
                                <Setter TargetName="CheckmarkBorder" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="MainBorder" Property="Background" Value="#FFF0FDF4"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#FF10B981"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Radio Button Answer Style -->
        <Style x:Key="AnswerRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="BorderElement"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" 
                                                ShadowDepth="4" BlurRadius="12" Opacity="0.1"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" 
                                              CenterX="0.5" CenterY="0.5"/>
                            </Border.RenderTransform>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Letter Badge -->
                                <Border Grid.Column="0" 
                                       x:Name="LetterBadge"
                                       Background="{TemplateBinding Tag}"
                                       CornerRadius="12" 
                                       Width="56" Height="56"
                                       Margin="0,0,20,0">
                                    <Border.RenderTransform>
                                        <RotateTransform x:Name="BadgeRotate" Angle="0" 
                                                        CenterX="28" CenterY="28"/>
                                    </Border.RenderTransform>
                                    <TextBlock Text="{TemplateBinding Content}" 
                                              FontSize="24" FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Answer Text -->
                                <TextBlock Grid.Column="1" 
                                          x:Name="AnswerText"
                                          Text="{TemplateBinding CommandParameter}"
                                          FontSize="{TemplateBinding FontSize}"
                                          FontWeight="{TemplateBinding FontWeight}"
                                          Foreground="{TemplateBinding Foreground}"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"/>

                                <!-- Radio Circle Indicator -->
                                <Grid Grid.Column="2" Width="40" Height="40">
                                    <Ellipse x:Name="OuterCircle"
                                            Stroke="#FFD1D5DB" 
                                            StrokeThickness="3"
                                            Fill="Transparent"/>
                                    <Ellipse x:Name="InnerCircle"
                                            Fill="{TemplateBinding Tag}"
                                            Width="24" Height="24"
                                            Visibility="Collapsed">
                                        <Ellipse.RenderTransform>
                                            <ScaleTransform x:Name="InnerScale" 
                                                          ScaleX="0" ScaleY="0"
                                                          CenterX="12" CenterY="12"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" Property="BorderBrush" 
                                       Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                <Setter TargetName="BorderElement" Property="Background" Value="#FFFAFAFA"/>
                                <Setter TargetName="OuterCircle" Property="Stroke" 
                                       Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.02" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.02" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="BadgeRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           To="5" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="BadgeRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BorderElement" Property="BorderBrush" 
                                       Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                <Setter TargetName="BorderElement" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag, Converter={StaticResource ColorToLightColorConverter}}" 
                                                        Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="OuterCircle" Property="Stroke" 
                                       Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                <Setter TargetName="AnswerText" Property="Foreground" 
                                       Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="InnerScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="InnerScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="BadgeRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" 
                                                ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="QuizProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#4D6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="4"/>
                            <Border x:Name="PART_Track" 
                                   CornerRadius="4">
                                <Border x:Name="PART_Indicator" 
                                       Background="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Left"
                                       CornerRadius="4"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Quiz Info -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title}" 
                              FontSize="24" FontWeight="Bold" 
                              Foreground="White" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#4DFFFFFF" CornerRadius="12" 
                               Padding="12,6" Margin="0,0,8,0">
                            <TextBlock Foreground="White" FontWeight="SemiBold">
                                <Run Text="📊"/>
                                <Run Text="{Binding Level}"/>
                            </TextBlock>
                        </Border>
                        <Border Background="#4DFFFFFF" CornerRadius="12" 
                               Padding="12,6">
                            <TextBlock Foreground="White" FontWeight="SemiBold">
                                <Run Text="📚"/>
                                <Run Text="{Binding Topic}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Timer Circle -->
                <Grid Grid.Column="1" Width="120" Height="120">
                    <Ellipse Stroke="#4DFFFFFF" StrokeThickness="8"/>
                    <Ellipse x:Name="TimerProgress" 
                            Stroke="White" StrokeThickness="8"
                            RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-90"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TimeRemaining}" 
                                  FontSize="26" FontWeight="Bold" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="giây" 
                                  FontSize="14" 
                                  Foreground="#CCFFFFFF" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Question Counter & Close Button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="16" 
                           Padding="20,12" Margin="0,0,16,0">
                        <TextBlock FontSize="18" FontWeight="Bold" 
                                  Foreground="#FF6366F1">
                            <Run Text="{Binding CurrentQuestionIndex}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding TotalQuestions}"/>
                        </TextBlock>
                    </Border>

                    <Button Content="✕" 
                           Command="{Binding CloseQuizCommand}"
                           Background="#4DFFFFFF" 
                           Foreground="White"
                           FontSize="24" FontWeight="Bold"
                           Width="48" Height="48"
                            Padding="0"
                           Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="0" 
                        VerticalAlignment="Bottom"
                        Value="{Binding QuizProgress}" 
                        Maximum="100"
                        Style="{StaticResource QuizProgressBarStyle}"
                        Margin="0,0,0,-16"/>

            <!-- Question & Answers Section -->
            <Border Grid.Row="1" 
                   Background="White" 
                   CornerRadius="24"
                   Padding="48"
                   Margin="0,16,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" 
                                    ShadowDepth="8" BlurRadius="32" Opacity="0.15"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Question -->
                        <Border Background="#FFF8FAFC" 
                                CornerRadius="16" 
                                Padding="32" 
                                Margin="0,0,0,32">
                            <TextBlock Text="{Binding CurrentQuestion.QuestionText}" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Foreground="#FF1F2937"
                      TextWrapping="Wrap"
                      LineHeight="40"/>
                        </Border>

                        <!-- Answers Grid -->
                        <Grid Margin="0,0,0,32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Option 1 - Red -->
                            <RadioButton Grid.Row="0" Grid.Column="0"
                         Foreground="#FFEF4444" Content="A"
                        CommandParameter="{Binding CurrentQuestion.Option1}"
                        GroupName="{Binding CurrentQuestion.QuizQuestionNumber}"
                        IsChecked="{Binding CurrentQuestion.IsOption1Selected, Mode=TwoWay}"
                        Tag="#FFEF4444"
                        Style="{StaticResource AnswerRadioButtonStyle}"
                        Margin="0,0,0,20"/>

                            <!-- Option 2 - Blue -->
                            <RadioButton Grid.Row="0" Grid.Column="2"
                        Content="B" Foreground="#FF3B82F6"
                        CommandParameter="{Binding CurrentQuestion.Option2}"
                        GroupName="{Binding CurrentQuestion.QuizQuestionNumber}"
                        IsChecked="{Binding CurrentQuestion.IsOption2Selected, Mode=TwoWay}"
                        Tag="#FF3B82F6"
                        Style="{StaticResource AnswerRadioButtonStyle}"
                        Margin="0,0,0,20"/>

                            <!-- Option 3 - Orange -->
                            <RadioButton Grid.Row="1" Grid.Column="0"
                        Content="C" Foreground="#FFF59E0B"
                        CommandParameter="{Binding CurrentQuestion.Option3}"
                        GroupName="{Binding CurrentQuestion.QuizQuestionNumber}"
                        IsChecked="{Binding CurrentQuestion.IsOption3Selected, Mode=TwoWay}"
                        Tag="#FFF59E0B"
                        Style="{StaticResource AnswerRadioButtonStyle}"
                        Margin="0,0,0,20"/>

                            <!-- Option 4 - Green -->
                            <RadioButton Grid.Row="1" Grid.Column="2"
                        Content="D" Foreground="#FF10B981"
                        CommandParameter="{Binding CurrentQuestion.Option4}"
                        GroupName="{Binding CurrentQuestion.QuizQuestionNumber}"
                        IsChecked="{Binding CurrentQuestion.IsOption4Selected, Mode=TwoWay}"
                        Tag="#FF10B981"
                        Style="{StaticResource AnswerRadioButtonStyle}"
                        Margin="0,0,0,20"/>
                        </Grid>

                        <!-- Question Navigator Panel -->
                        <Border Background="#FFF8FAFC"
                                CornerRadius="16"
                                Padding="28,24">
                            <StackPanel>
                                <!-- Header -->
                                <Grid Margin="0,0,0,16">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tất cả câu hỏi"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#FF1F2937"
                                  VerticalAlignment="Center"/>
                                        <Border Background="#FF6366F1"
                               CornerRadius="8"
                               Padding="8,4"
                               Margin="12,0,0,0">
                                            <TextBlock Foreground="White"
                                      FontSize="13"
                                      FontWeight="SemiBold">
                                                <Run Text="{Binding AnsweredCount}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding TotalQuestions}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <!-- Legend -->
                                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                            <Border Background="#FF6366F1"
                                   Width="18" Height="18"
                                   CornerRadius="6"
                                   Margin="0,0,6,0"/>
                                            <TextBlock Text="Hiện tại"
                                      FontSize="12"
                                      Foreground="#FF6B7280"
                                      VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                            <Border Background="#FFF0FDF4"
                                   BorderBrush="#FF10B981"
                                   BorderThickness="2"
                                   Width="18" Height="18"
                                   CornerRadius="6"
                                   Margin="0,0,6,0"/>
                                            <TextBlock Text="Đã làm"
                                      FontSize="12"
                                      Foreground="#FF6B7280"
                                      VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="White"
                                   BorderBrush="#FFFBBF24"
                                   BorderThickness="2"
                                   Width="18" Height="18"
                                   CornerRadius="6"
                                   Margin="0,0,6,0">
                                                <TextBlock Text="🚩"
                                          FontSize="9"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Đã đánh dấu"
                                      FontSize="12"
                                      Foreground="#FF6B7280"
                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!-- Question Numbers Grid -->
                                <ItemsControl ItemsSource="{Binding Questions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding QuizQuestionNumber}"
                                                   Command="{Binding DataContext.NavigateToQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding QuizQuestionNumber}"
                                                   DataContext="{Binding}"
                                                   Style="{StaticResource QuestionNumberButtonStyle}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Navigation Footer -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button Grid.Column="0"
                       Content="← Previous" 
                       Command="{Binding PreviousQuestionCommand}"
                       Style="{StaticResource NavButtonStyle}"
                       Width="150"/>
                <Button Grid.Column="2" 
                       Content="{Binding FlagButtonText}" 
                       Command="{Binding FlagCommand}"
                       Style="{StaticResource NavButtonStyle}"
                       Width="150" Margin="20 0 0 0"/>

                <!-- Next/Submit Button -->
                <Button Grid.Column="4"
                       Content="{Binding NextButtonText}" 
                       Command="{Binding NextQuestionCommand}"
                       Style="{StaticResource NavButtonStyle}"
                       Background="#FF10B981"
                       Foreground="White"
                       Width="150"/>
            </Grid>
        </Grid>
        <!-- Submit Confirmation Popup Overlay -->
        <Grid x:Name="SubmitConfirmationOverlay" 
      Background="#B3000000"
      Visibility="{Binding ShowSubmitConfirmation, Converter={StaticResource BoolToVisibilityConverter}}"
      Panel.ZIndex="1000">

            <Border Background="White" 
            CornerRadius="20"
            Padding="40"
            MaxWidth="420"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" 
                            ShadowDepth="20" BlurRadius="40" Opacity="0.3"/>
                </Border.Effect>

                <Border.RenderTransform>
                    <ScaleTransform x:Name="PopupScale" ScaleX="1" ScaleY="1" 
                          CenterX="210" CenterY="150"/>
                </Border.RenderTransform>

                <StackPanel>
                    <!-- Icon -->
                    <Border Background="#FFF0F9FF" 
                    Width="64" Height="64"
                    CornerRadius="32"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
                        <TextBlock Text="📝" 
                          FontSize="32"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Nộp bài Quiz?" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#FF1F2937"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,12"/>

                    <!-- Description -->
                    <TextBlock TextWrapping="Wrap"
                      FontSize="15" 
                      Foreground="#FF6B7280"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      LineHeight="22"
                      Margin="0,0,0,28">
                <Run Text="Bạn đã hoàn thành"/>
                <Run Text="{Binding AnsweredCount}" FontWeight="SemiBold" Foreground="#FF6366F1"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalQuestions}" FontWeight="SemiBold" Foreground="#FF6366F1"/>
                <Run Text="câu hỏi."/>
                <LineBreak/>
                <Run Text="Bạn có chắc muốn nộp bài không?"/>
                    </TextBlock>

                    <!-- Quick Stats -->
                    <Border Background="#FFF8FAFC" 
                    CornerRadius="12" 
                    Padding="16"
                    Margin="0,0,0,28">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Answered -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding AnsweredCount}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#FF10B981"
                                  HorizontalAlignment="Center"/>
                                <TextBlock Text="Đã làm" 
                                  FontSize="12" 
                                  Foreground="#FF6B7280"
                                  HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Unanswered -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#FFEF4444"
                                  HorizontalAlignment="Center">
                            <Run Text="{Binding UnansweredCount}"/>
                                </TextBlock>
                                <TextBlock Text="Chưa làm" 
                                  FontSize="12" 
                                  Foreground="#FF6B7280"
                                  HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                       Content="Hủy" 
                       Command="{Binding CancelSubmitCommand}"
                       Background="#FFF3F4F6"
                       Foreground="#FF6B7280"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="15"
                       Height="48"
                       Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                   Background="{TemplateBinding Background}" 
                                   CornerRadius="12"
                                   Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#FFE5E7EB"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Confirm Submit Button -->
                        <Button Grid.Column="2"
                       Content="Nộp bài" 
                       Command="{Binding ConfirmSubmitCommand}"
                       Background="#FF6366F1"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="15"
                       Height="48"
                       Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                   Background="{TemplateBinding Background}" 
                                   CornerRadius="12"
                                   Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FF6366F1" Direction="270" 
                                                    ShadowDepth="4" BlurRadius="12" Opacity="0.4"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#FF4F46E5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
        <!-- Results Overlay (Shown after quiz completion) -->
        <Grid x:Name="ResultsOverlay" 
             Background="#E6FFFFFF"
             Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" 
                   CornerRadius="24"
                   Padding="64"
                   MaxWidth="600"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" 
                                    ShadowDepth="16" BlurRadius="48" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Trophy Icon -->
                    <TextBlock Text="🏆" 
                              FontSize="80" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,24"/>

                    <TextBlock Text="Hoàn thành Quiz!" 
                              FontSize="32" FontWeight="Bold" 
                              Foreground="#FF1F2937"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,16"/>

                    <!-- Score Display -->
                    <Border Background="#FFF0FDF4" 
                           BorderBrush="#FF10B981"
                           BorderThickness="2"
                           CornerRadius="16" 
                           Padding="32"
                           Margin="0,0,0,32">
                        <StackPanel>
                            <TextBlock Text="{Binding Score}" 
                                      FontSize="56" FontWeight="Bold" 
                                      Foreground="#FF10B981"
                                      HorizontalAlignment="Center"/>
                            <TextBlock HorizontalAlignment="Center" 
                                      FontSize="18" 
                                      Foreground="#FF6B7280">
                                <Run Text="{Binding CorrectAnswers}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding TotalQuestions}"/>
                                <Run Text="câu đúng"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel>
                        <Button Content="Xem lại đáp án" 
                               Command="{Binding ReviewAnswersCommand}"
                               Style="{StaticResource NavButtonStyle}"
                               Background="#FF6366F1"
                               Foreground="White"
                               HorizontalAlignment="Stretch"
                               Height="50"
                               Margin="0,0,0,12"/>

                        <Button Content="Làm lại Quiz" 
                               Command="{Binding RetakeQuizCommand}"
                               Style="{StaticResource NavButtonStyle}"
                               HorizontalAlignment="Stretch"
                               Height="50"
                               Margin="0,0,0,12"/>

                        <Button Content="Về trang chủ" 
                               Command="{Binding BackToHomeCommand}"
                               Style="{StaticResource NavButtonStyle}"
                               HorizontalAlignment="Stretch"
                               Height="50"
                               Background="Transparent"
                               Foreground="#FF6B7280"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
