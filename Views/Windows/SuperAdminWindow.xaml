<Window x:Class="TDEduEnglish.Views.Windows.SuperAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.Windows"
        mc:Ignorable="d"
        Title="SuperAdminWindow" Height="800" Width="1200">
    <Window.Resources>
        <!-- Compact Button Style -->
        <Style x:Key="CompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Compact Button Style -->
        <Style x:Key="SecondaryCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF6366F1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFEF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFDC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFB91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessCompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Item Style -->
        <Style x:Key="AdminMenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="8,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Menu Item Style -->
        <Style x:Key="ActiveMenuItemStyle" TargetType="Button" BasedOn="{StaticResource AdminMenuItemStyle}">
            <Setter Property="Background" Value="#FFEFF6FF"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
        </Style>

        <!-- Small Icon Button Style -->
        <Style x:Key="SmallIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="Foreground" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Profile Button Style -->
        <Style x:Key="AdminProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Width="280" HorizontalAlignment="Left" Background="White" Panel.ZIndex="5">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="0" ShadowDepth="2" BlurRadius="15" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="24,0,0,0">
                    <Border Background="#FF6366F1" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                        <TextBlock Text="TD" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="TDEdu Admin" FontSize="18" FontWeight="Bold" 
                                  Foreground="#FF1F2937"/>
                        <TextBlock Text="Management Panel" FontSize="11" 
                                  Foreground="#FF6B7280" Margin="0,-2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <!-- Dashboard -->
                        <TextBlock Text="OVERVIEW" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#FF9CA3AF" Margin="24,0,0,8"/>

                        <Button Content="📊 Dashboard" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Dashboard"
                               Style="{StaticResource ActiveMenuItemStyle}"/>

                        <Button Content="📈 Analytics" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Analytics"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <!-- Content Management -->
                        <TextBlock Text="CONTENT MANAGEMENT" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#FF9CA3AF" Margin="24,24,0,8"/>

                        <Button Content="📚 Reading" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Reading"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="📝 Lessons" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Lessons"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="📖 Vocabulary" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Vocabulary"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="🎯 Quizzes" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Quizzes"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <!-- User Management -->
                        <TextBlock Text="USER MANAGEMENT" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#FF9CA3AF" Margin="24,24,0,8"/>

                        <Button Content="👥 Users" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Users"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="👨‍🏫 Instructors" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Instructors"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="👨‍💼 Admins" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Admins"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <!-- System -->
                        <TextBlock Text="SYSTEM" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#FF9CA3AF" Margin="24,24,0,8"/>

                        <Button Content="⚙️ Settings" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Settings"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="🔒 Roles and Permissions" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="RolesPermissions"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="📊 Reports" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Reports"
                               Style="{StaticResource AdminMenuItemStyle}"/>

                        <Button Content="🗄️ Backup" 
                               Command="{Binding NavigateCommand}" 
                               CommandParameter="Backup"
                               Style="{StaticResource AdminMenuItemStyle}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Version Info -->
                <Border Grid.Row="2" Background="#FFF9FAFB" CornerRadius="8" 
                       Margin="16,0,16,16" Padding="12">
                    <StackPanel>
                        <TextBlock Text="TDEdu Admin v2.1.0" 
                                  FontSize="12" FontWeight="Medium" 
                                  Foreground="#FF6B7280"/>
                        <TextBlock Text="© 2024 TDEdu Platform" 
                                  FontSize="11" 
                                  Foreground="#FF9CA3AF"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="280,0,0,0">
            <!-- Top Header -->
            <Border Height="70" VerticalAlignment="Top" Background="White" Panel.ZIndex="10">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="10" Opacity="0.08"/>
                </Border.Effect>

                <Grid Margin="24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title and Breadcrumb -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentPageTitle}" 
                                  FontSize="20" FontWeight="SemiBold" 
                                  Foreground="#FF1F2937"/>
                        <TextBlock Text="{Binding Breadcrumb}" 
                                  FontSize="13" 
                                  Foreground="#FF6B7280" 
                                  Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Header Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                               VerticalAlignment="Center">

                        <!-- Search -->
                        <Border Background="#FFF9FAFB" CornerRadius="8" 
                               Height="36" Width="240" Margin="0,0,16,0">
                            <Grid>
                                <TextBox Text="{Binding SearchText}" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Margin="12,0,36,0"
                                        FontSize="14"
                                        Foreground="#FF374151"/>
                                <Button HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Command="{Binding SearchCommand}"
                                       Style="{StaticResource SmallIconButtonStyle}">
                                    <TextBlock Text="🔍" FontSize="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Notifications -->
                        <Grid Margin="0,0,12,0">
                            <Button Command="{Binding NotificationCommand}"
                                   Style="{StaticResource SmallIconButtonStyle}"
                                   ToolTip="Notifications">
                                <TextBlock Text="🔔" FontSize="16"/>
                            </Button>
                            <!-- Notification Badge -->
                            <Border Background="#FFEF4444" CornerRadius="6" 
                                   Width="12" Height="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                   Margin="0,-2,-2,0"
                                   Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding NotificationCount}" 
                                          FontSize="8" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <!-- Admin Profile -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Command="{Binding AdminProfileCommand}"
                                   Style="{StaticResource AdminProfileButtonStyle}"
                                   ToolTip="{Binding AdminName}"
                                   Margin="0,0,8,0">
                                <TextBlock Text="{Binding AdminInitials}" 
                                          FontSize="12" FontWeight="SemiBold"/>
                            </Button>

                            <StackPanel VerticalAlignment="Center" Margin="0,0,12,0">
                                <TextBlock Text="{Binding AdminName}" 
                                          FontSize="13" FontWeight="Medium" 
                                          Foreground="#FF1F2937"/>
                                <TextBlock Text="Administrator" Margin="0 0 0 15"
                                          FontSize="11" 
                                          Foreground="#FF6B7280"/>
                            </StackPanel>

                            <!-- Logout Button -->
                            <Button Content="Logout" 
                                   Command="{Binding LogoutCommand}" 
                                   Style="{StaticResource SecondaryCompactButtonStyle}"
                                   FontSize="12" Height="32" Width="70"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Margin="0,70,0,0" Background="#FFF8FAFC">
                <!-- Sample Dashboard Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                    <StackPanel>
                        <!-- Quick Stats -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Users -->
                            <Border Grid.Column="0" Background="White" CornerRadius="12" 
                                   Padding="20" Margin="0,0,12,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Left"/>
                                        <TextBlock Text="+12%" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    </Grid>
                                    <TextBlock Text="10,245" FontSize="28" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,8,0,4"/>
                                    <TextBlock Text="Total Users" FontSize="14" 
                                              Foreground="#FF6B7280"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Courses -->
                            <Border Grid.Column="1" Background="White" CornerRadius="12" 
                                   Padding="20" Margin="0,0,12,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="📚" FontSize="24" HorizontalAlignment="Left"/>
                                        <TextBlock Text="+8%" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    </Grid>
                                    <TextBlock Text="542" FontSize="28" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,8,0,4"/>
                                    <TextBlock Text="Total Courses" FontSize="14" 
                                              Foreground="#FF6B7280"/>
                                </StackPanel>
                            </Border>

                            <!-- Active Lessons -->
                            <Border Grid.Column="2" Background="White" CornerRadius="12" 
                                   Padding="20" Margin="0,0,12,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="📝" FontSize="24" HorizontalAlignment="Left"/>
                                        <TextBlock Text="+15%" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    </Grid>
                                    <TextBlock Text="1,205" FontSize="28" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,8,0,4"/>
                                    <TextBlock Text="Active Lessons" FontSize="14" 
                                              Foreground="#FF6B7280"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Vocabulary -->
                            <Border Grid.Column="3" Background="White" CornerRadius="12" 
                                   Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="📖" FontSize="24" HorizontalAlignment="Left"/>
                                        <TextBlock Text="+5%" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#FF10B981" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    </Grid>
                                    <TextBlock Text="8,750" FontSize="28" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,8,0,4"/>
                                    <TextBlock Text="Vocabulary Words" FontSize="14" 
                                              Foreground="#FF6B7280"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Quick Actions -->
                        <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" 
                                              Foreground="#FF1F2937"/>
                                    <Button Content="View All" 
                                           Style="{StaticResource SecondaryCompactButtonStyle}"
                                           HorizontalAlignment="Right" Height="32" Width="80"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <Button Content="+ Add Reading Lesson" 
                                               Command="{Binding AddReadingLessonCommand}" 
                                               Style="{StaticResource CompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>
                                        <Button Content="+ Add Lesson" 
                                               Command="{Binding AddLessonCommand}" 
                                               Style="{StaticResource SuccessCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                        <Button Content="+ Add Vocabulary" 
                                               Command="{Binding AddVocabularyCommand}" 
                                               Style="{StaticResource CompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>
                                        <Button Content="+ Add Quiz" 
                                               Command="{Binding AddQuizCommand}" 
                                               Style="{StaticResource SuccessCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                        <Button Content="+ Add User" 
                                               Command="{Binding AddUserCommand}" 
                                               Style="{StaticResource CompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>
                                        <Button Content="+ Add Admin" 
                                               Command="{Binding AddAdminCommand}" 
                                               Style="{StaticResource SuccessCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <Button Content="📊 Export Data" 
                                               Command="{Binding ExportDataCommand}" 
                                               Style="{StaticResource SecondaryCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36" Margin="0,0,0,8"/>
                                        <Button Content="🔄 Sync Data" 
                                               Command="{Binding SyncDataCommand}" 
                                               Style="{StaticResource SecondaryCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="36"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Recent Activities -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Recent Activities Table -->
                            <Border Grid.Column="0" Background="White" CornerRadius="12" 
                                   Padding="24" Margin="0,0,12,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid Margin="0,0,0,20">
                                        <TextBlock Text="Recent Activities" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937"/>
                                        <Button Content="View All" 
                                               Style="{StaticResource SecondaryCompactButtonStyle}"
                                               HorizontalAlignment="Right" Height="32" Width="80"/>
                                    </Grid>

                                    <DataGrid AutoGenerateColumns="False" 
                                             ItemsSource="{Binding RecentActivities}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             GridLinesVisibility="None"
                                             HeadersVisibility="Column"
                                             RowHeaderWidth="0"
                                             CanUserAddRows="False"
                                             CanUserDeleteRows="False"
                                             CanUserResizeRows="False"
                                             SelectionMode="Single"
                                             FontSize="13">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#FFF9FAFB"/>
                                                <Setter Property="Foreground" Value="#FF6B7280"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="#FF374151"/>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFF9FAFB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="User" Binding="{Binding User}" Width="*"/>
                                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="*"/>
                                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="100"/>
                                            <DataGridTemplateColumn Header="Actions" Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="👁️" 
                                                                   Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                   CommandParameter="{Binding}"
                                                                   Style="{StaticResource SmallIconButtonStyle}"
                                                                   ToolTip="View Details" Margin="0,0,4,0"/>
                                                            <Button Content="🗑️" 
                                                                   Command="{Binding DataContext.DeleteActivityCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                   CommandParameter="{Binding}"
                                                                   Style="{StaticResource SmallIconButtonStyle}"
                                                                   ToolTip="Delete" Foreground="#FFEF4444"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>

                            <!-- System Status -->
                            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="15" Opacity="0.06"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="System Status" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,20"/>

                                    <!-- Server Status -->
                                    <Grid Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Server Status" FontSize="13" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Fill="#FF10B981" Width="8" Height="8" Margin="0,0,8,0"/>
                                                <TextBlock Text="Online" FontSize="12" Foreground="#FF10B981"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Database Status -->
                                    <Grid Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Database" FontSize="13" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Fill="#FF10B981" Width="8" Height="8" Margin="0,0,8,0"/>
                                                <TextBlock Text="Connected" FontSize="12" Foreground="#FF10B981"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Storage -->
                                    <Grid Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Storage Usage" FontSize="13" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <ProgressBar Value="75" Maximum="100" Height="8" Margin="0,6,0,4"
                                                        Background="#FFE5E7EB" 
                                                        Foreground="#FF6366F1"/>
                                            <TextBlock Text="75% used (2.3GB of 3GB)" FontSize="11" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Memory Usage -->
                                    <Grid Margin="0,0,0,20">
                                        <StackPanel>
                                            <TextBlock Text="Memory Usage" FontSize="13" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <ProgressBar Value="45" Maximum="100" Height="8" Margin="0,6,0,4"
                                                        Background="#FFE5E7EB" 
                                                        Foreground="#FF10B981"/>
                                            <TextBlock Text="45% used (1.8GB of 4GB)" FontSize="11" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- System Actions -->
                                    <StackPanel>
                                        <Button Content="🔄 Restart System" 
                                               Command="{Binding RestartSystemCommand}" 
                                               Style="{StaticResource SecondaryCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="32" Margin="0,0,0,8"/>

                                        <Button Content="🗄️ Backup Now" 
                                               Command="{Binding BackupNowCommand}" 
                                               Style="{StaticResource CompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="32" Margin="0,0,0,8"/>

                                        <Button Content="⚠️ Maintenance" 
                                               Command="{Binding MaintenanceCommand}" 
                                               Style="{StaticResource DangerCompactButtonStyle}"
                                               HorizontalAlignment="Stretch" Height="32"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!-- Content Frame for Navigation -->
                <Frame x:Name="ContentFrame" 
                      NavigationUIVisibility="Hidden" 
                      Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
