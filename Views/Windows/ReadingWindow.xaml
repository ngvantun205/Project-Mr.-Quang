<Window x:Class="TDEduEnglish.Views.Windows.ReadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.Windows"
        xmlns:behaviors="clr-namespace:TDEduEnglish.Behaviors"
        Background="Black"
        mc:Ignorable="d"
        Title="ReadingWindow" Height="740" Width="1200"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Window.Resources>
        <BackEase x:Key="BackEase" EasingMode="EaseOut" Amplitude="0.5"/>
        <Style x:Key="CompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF6366F1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OptionRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Padding" Value="8,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="OptionBorder"
                                Background="#FFFFFFFF"
                                BorderBrush="#FFE5E7EB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="RadioIndicator"
                                        Width="20" Height="20"
                                        CornerRadius="10"
                                        BorderBrush="#FFD1D5DB"
                                        BorderThickness="2"
                                        Background="White"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center">
                                    <Ellipse x:Name="RadioDot"
                                             Width="8" Height="8"
                                             Fill="#FF6366F1"
                                             Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OptionBorder" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="OptionBorder" Property="Background" Value="#FFF8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RadioIndicator" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="OptionBorder" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="OptionBorder" Property="Background" Value="#FFF0F9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TimerProgressStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#FFE5E7EB"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}">
                            <Grid>
                                <Rectangle x:Name="PART_Track" />
                                <Rectangle x:Name="PART_Indicator" 
                                           Fill="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Timer Bar -->
        <Border Height="60" VerticalAlignment="Top" Background="White" Panel.ZIndex="10">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="10" Opacity="0.08"/>
            </Border.Effect>

            <Grid Margin="32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Reading Level Badge -->
                <Border Grid.Column="0" Background="#FF10B981" CornerRadius="12" 
                        Padding="12,6" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="{Binding ReadingLesson.Level, StringFormat='Level {0}'}" 
                               Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                </Border>

                <!-- Timer Section -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="⏰" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TimeRemaining, StringFormat='Time: {0}'}" 
                                   FontWeight="SemiBold" FontSize="14" Foreground="#FF374151"/>
                        <TextBlock Text="{Binding ReadingLesson.SuggestedTime, StringFormat=' / {0}'}" 
                                   FontSize="12" Foreground="#FF6B7280" Margin="4,0,0,0"/>
                    </StackPanel>
                    <ProgressBar Style="{StaticResource TimerProgressStyle}" 
                                 Value="{Binding TimerProgress}" Maximum="100"/>
                </StackPanel>

                <!-- Question Progress -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="{Binding QuestionProgress, StringFormat='Question: {0}'}" 
                               FontWeight="SemiBold" FontSize="14" Foreground="#FF374151"/>
                </StackPanel>

                <!-- Exit Button -->
                <Button Grid.Column="3" Content="Exit" 
                        Command="{Binding ExitCommand}"
                        Style="{StaticResource CompactSecondaryButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Reading Content -->
            <Border Grid.Column="0" Background="White" Margin="20,20,10,20" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="4" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <ScrollViewer Padding="32" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Reading Title -->
                        <RichTextBox IsReadOnly="True" BorderThickness="0"
                                     FontSize="24" FontWeight="Bold" 
                                     Foreground="#FF1F2937" 
                                     Margin="0,0,0,20">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="{Binding Title}" />
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>

                        <Separator Background="#FFE5E7EB" Margin="0,0,0,24"/>

                        <RichTextBox IsReadOnly="True"
                 BorderThickness="0"
                 FontSize="16"
                 Foreground="#FF374151"
                 Background="Transparent"
                 Padding="0"
                 IsDocumentEnabled="True"
                 behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding WordSelectedCommand}">
                            <FlowDocument>
                                <Paragraph TextAlignment="Justify" LineHeight="26">
                                    <Run Text="{Binding Content}" />
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Questions & Answers -->
            <Border Grid.Column="1" Background="White" Margin="10,20,20,20" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="4" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Questions ScrollViewer -->
                    <ScrollViewer Grid.Row="0" Padding="24,24,24,16" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReadingQuestions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,32" 
                                            Background="#FFF8FAFC" 
                                            CornerRadius="8" 
                                            Padding="20">
                                        <StackPanel>
                                            <!-- Question Header -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                                <Border Background="#FF6366F1" CornerRadius="12" 
                                                        Width="28" Height="28" Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding QuestionNumber}" 
                                                               Foreground="White" FontWeight="Bold" FontSize="12"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="Question" Foreground="#FF6366F1" 
                                                           FontWeight="SemiBold" FontSize="14" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Question Text -->
                                            <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                         FontSize="15" FontWeight="Medium"
                                                         Foreground="#FF1F2937" 
                                                         Margin="0,0,0,16"
                                                         behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding DataContext.WordSelectedCommand, 
                RelativeSource={RelativeSource AncestorType=Window}}">
                                                <FlowDocument>
                                                    <Paragraph>
                                                        <Run Text="{Binding QuestionText}" />
                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>

                                            <!-- Options -->
                                            <RadioButton IsChecked="{Binding IsOption1Selected, Mode=TwoWay}">
                                                <RadioButton.Content>
                                                    <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                                 FontSize="14" Foreground="#FF374151"
                                                                 Padding="0" behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding DataContext.WordSelectedCommand, 
                RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <FlowDocument>
                                                            <Paragraph>
                                                                <Run Text="{Binding Option1}" />
                                                            </Paragraph>
                                                        </FlowDocument>
                                                    </RichTextBox>
                                                    
                                                </RadioButton.Content>
                                                
                                            </RadioButton>

                                            <RadioButton IsChecked="{Binding IsOption2Selected, Mode=TwoWay}">
                                                <RadioButton.Content>
                                                    <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                                 FontSize="14" Foreground="#FF374151"
                                                                 Padding="0" behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding DataContext.WordSelectedCommand, 
                RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <FlowDocument>
                                                            <Paragraph>
                                                                <Run Text="{Binding Option2}" />
                                                            </Paragraph>
                                                        </FlowDocument>
                                                    </RichTextBox>
                                                </RadioButton.Content>
                                            </RadioButton>

                                            <RadioButton IsChecked="{Binding IsOption3Selected, Mode=TwoWay}">
                                                <RadioButton.Content>
                                                    <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                                 FontSize="14" Foreground="#FF374151"
                                                                 Padding="0" behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding DataContext.WordSelectedCommand, 
                RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <FlowDocument>
                                                            <Paragraph>
                                                                <Run Text="{Binding Option3}" />
                                                            </Paragraph>
                                                        </FlowDocument>
                                                    </RichTextBox>
                                                </RadioButton.Content>
                                            </RadioButton>

                                            <RadioButton IsChecked="{Binding IsOption4Selected, Mode=TwoWay}"> 
                                                <RadioButton.Content>
                                                    <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                                 FontSize="14" Foreground="#FF374151"
                                                                 Padding="0" behaviors:TextSelectionBehavior.SelectedTextCommand="{Binding DataContext.WordSelectedCommand, 
                RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <FlowDocument>
                                                            <Paragraph>
                                                                <Run Text="{Binding Option4}" />
                                                            </Paragraph>
                                                        </FlowDocument>
                                                    </RichTextBox>
                                                </RadioButton.Content>
                                            </RadioButton>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Submit Button Area -->
                    <Border Grid.Row="1" Background="#FFF8FAFC" 
                            BorderBrush="#FFE5E7EB" BorderThickness="0,1,0,0"
                            Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Progress Info -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding AnsweredQuestions, StringFormat='Answered: {0} questions'}" 
                                           FontSize="12" Foreground="#FF6B7280"/>
                                <TextBlock Text="{Binding ReadingQuestions.Count, StringFormat='Total: {0} questions'}" 
                                           FontSize="12" Foreground="#FF6B7280"/>
                            </StackPanel>

                            <!-- Submit Button -->
                            <Button Grid.Column="1" Content="📝 Submit Quiz" 
                                    Command="{Binding SubmitCommand}"
                                    Style="{StaticResource CompactButtonStyle}"
                                    Width="120" Height="36"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Popup IsOpen="{Binding IsPopupOpen}"
       Placement="MousePoint"
       StaysOpen="False">
                <Border Background="#FF111827" 
            CornerRadius="8" 
            Padding="12"
            MinWidth="180">
                    <StackPanel>
                        <!-- Từ được chọn -->
                        <TextBlock Text="{Binding SelectedWord}"
                       Foreground="#60A5FA"
                       FontSize="15"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="250"/>

                        <!-- Separator nhẹ -->
                        <Border Height="1" 
                    Background="#1F2937"
                    Margin="0,2"/>

                        <!-- Button thêm từ vựng -->
                        <Border Background="#1F2937"
                    CornerRadius="6"
                    Padding="10,6"
                    Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#374151"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding AddToVocabularyCommand}"
                                  CommandParameter="{Binding SelectedWord}" />
                            </Border.InputBindings>

                            <TextBlock Foreground="White" 
                           FontSize="13"
                           TextAlignment="Center">
                    <Run Text="➕"/>
                    <Run Text="Thêm vào từ vựng của tôi"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
        <Grid Visibility="{Binding IsResultPopupVisible, Converter={StaticResource BoolToVisibilityConverter}}"
      Background="#80000000"
      Panel.ZIndex="100">

            <!-- Popup Content -->
            <Border Background="White" 
            CornerRadius="16" 
            Width="420"
            MaxHeight="550"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0" BlurRadius="40" Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Close Button -->
                    <Button Grid.Row="0" 
                    Content="✕" 
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="36" Height="36"
                    Margin="12,12,12,0"
                    Background="Transparent"
                    Foreground="#FF9CA3AF"
                    BorderThickness="0"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF3F4F6"/>
                                        <Setter Property="Foreground" Value="#FF374151"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Main Content -->
                    <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="40,10,40,20">
                        <StackPanel>

                            <!-- Success Icon with Animation -->
                            <Border Width="100" Height="100"
                            Background="#FFF0F9FF"
                            CornerRadius="50"
                            Margin="0,0,0,24">
                                <Viewbox Width="60" Height="60">
                                    <TextBlock Text="🏆" Foreground="#FFFBBF24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                        <TextBlock.RenderTransform>
                                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" 
                                                    CenterX="30" CenterY="30"/>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 From="0" To="1" Duration="0:0:0.5"
                                                                 EasingFunction="{StaticResource BackEase}"/>
                                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 From="0" To="1" Duration="0:0:0.5"
                                                                 EasingFunction="{StaticResource BackEase}"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                </Viewbox>
                            </Border>

                            <!-- Title -->
                            <TextBlock Text="{Binding ResultTitle}" 
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FF1F2937"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                            <!-- Subtitle -->
                            <TextBlock Text="{Binding ResultSubtitle}" 
                               FontSize="14"
                               Foreground="#FF6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,28"/>

                            <!-- Score Card -->
                            <Border Background="#FFF8FAFC"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Correct Answers -->
                                    <StackPanel Grid.Column="0" 
                                        HorizontalAlignment="Center">
                                        <TextBlock Text="✓" 
                                           FontSize="28"
                                           Foreground="#FF10B981"
                                           TextAlignment="Center"
                                           Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding CorrectAnswers}" 
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="#FF10B981"
                                           TextAlignment="Center"/>
                                        <TextBlock Text="Câu đúng" 
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           TextAlignment="Center"
                                           Margin="0,6,0,0"/>
                                    </StackPanel>

                                    <!-- Divider -->
                                    <Border Grid.Column="1" 
                                    Width="1" 
                                    Background="#FFE5E7EB"
                                    Margin="24,0"/>

                                    <!-- Total Score -->
                                    <StackPanel Grid.Column="2" 
                                        HorizontalAlignment="Center">
                                        <TextBlock Text="★" 
                                           FontSize="28"
                                           Foreground="#FFFBBF24"
                                           TextAlignment="Center"
                                           Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TotalScore}"
                                               FontSize="35"
                                               FontWeight="Bold"
                                               Foreground="#FF6366F1"/>
                                            <TextBlock Text="/" 
                                               FontSize="20" 
                                               Foreground="#FF9CA3AF"
                                               Margin="4,8,4,0"/>
                                            <TextBlock Text="{Binding MaxScore}" 
                                               FontSize="20" 
                                               Foreground="#FF9CA3AF"
                                               Margin="0,8,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="Điểm" 
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           TextAlignment="Center"
                                           Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Performance Message -->
                            <Border Background="{Binding PerformanceColor}"
                            CornerRadius="8"
                            Padding="16,12">
                                <TextBlock Text="{Binding PerformanceMessage}" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2" 
                  Margin="40,0,40,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                        Content="📋 Xem đáp án"
                        Command="{Binding ReviewAnswersCommand}"
                        Style="{StaticResource CompactSecondaryButtonStyle}"
                        Height="44"/>

                        <Button Grid.Column="2"
                        Content="✨ Tiếp tục"
                        Command="{Binding ContinueCommand}"
                        Style="{StaticResource CompactButtonStyle}"
                        Height="44"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
