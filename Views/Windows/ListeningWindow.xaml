<Window x:Class="TDEduEnglish.Views.Windows.ListeningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.Windows"
        mc:Ignorable="d"
        Title="ListeningWindow" Height="800" Width="1200">
    <Window.Resources>
        <BackEase x:Key="BackEase" EasingMode="EaseOut" Amplitude="0.5"/>
        <!-- Compact Button Style -->
        <Style x:Key="CompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CompactSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF6366F1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Small Icon Button Style -->
        <Style x:Key="SmallIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF3F4F6"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Answer Option Style -->
        <Style x:Key="AnswerOptionStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="20" Height="20" 
                                       CornerRadius="10"
                                       BorderThickness="2"
                                       BorderBrush="#FFD1D5DB"
                                       Background="Transparent"
                                       Margin="0,0,12,0">
                                    <Ellipse x:Name="CheckMark" 
                                            Width="10" Height="10"
                                            Fill="#FF6366F1"
                                            Visibility="Collapsed"/>
                                </Border>

                                <ContentPresenter Grid.Column="1"
                                                 Content="{TemplateBinding Content}"
                                                 VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF9FAFB"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFEFF6FF"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Question Card Style -->
        <Style x:Key="QuestionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TimerProgressStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#FFE5E7EB"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}">
                            <Grid>
                                <Rectangle x:Name="PART_Track" />
                                <Rectangle x:Name="PART_Indicator" 
                                           Fill="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    

    <Grid>
        <!-- Fixed Header Section -->
        <Grid Height="140" VerticalAlignment="Top" Panel.ZIndex="100">
            <Grid.Background>
                <SolidColorBrush Color="White" Opacity="0.98"/>
            </Grid.Background>
            <Grid.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="12" Opacity="0.1"/>
            </Grid.Effect>

            <Grid Margin="24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Row: Title and Timer -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title Section -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#FF6366F1" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                            <TextBlock Text="🎧" FontSize="16" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <WrapPanel>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" 
                                      FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937"/>
                                <TextBlock Text="{Binding Level}" 
                                      FontSize="12" Foreground="#FF6B7280"/>
                            </StackPanel>
                            <MediaElement Source="{Binding AudioSource}" LoadedBehavior="Manual"></MediaElement>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Timer Section -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#FFFEF3C7" CornerRadius="8" Padding="12,6" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏰" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding RemainingTime, StringFormat=mm\\:ss}" 
                                          FontSize="16" FontWeight="Bold" 
                                          Foreground="#FF92400E"/>
                            </StackPanel>
                        </Border>

                        <Button Content="Exit" 
                               Command="{Binding ExitCommand}"
                               Style="{StaticResource SmallIconButtonStyle}"
                               ToolTip="Pause Timer"/>
                    </StackPanel>
                </Grid>

                <!-- Audio Controls Row -->
                <Border Grid.Row="1" Background="#FFF9FAFB" CornerRadius="10" Padding="16">
                    <Grid HorizontalAlignment="Right" Width="1120">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Play/Pause Button -->
                        <WrapPanel>
                            <Button Grid.Column="0" Command="{Binding PlayPauseCommand}"
                               Content="{Binding IsPlaying}"
                               x:Name="btnPlay"
                               Style="{StaticResource SmallIconButtonStyle}"
                               Width="45" Height="44"
                               FontSize="18" Padding="0"
                               Margin="10,0,15,10" />
                        <Button Grid.Column="0" Command="{Binding Previous5sCommand}"
                               Content="Pre 5s"
                               x:Name="btnPrevious5s"
                               Style="{StaticResource SmallIconButtonStyle}"
                               Width="65" Height="44"
                               FontSize="18" Padding="0"
                               Margin="0,0,15,0" />
                            <Button Grid.Column="0" Command="{Binding Next5sCommand}"
                               Content="Next 5s"
                               x:Name="btnNext5s"
                               Style="{StaticResource SmallIconButtonStyle}"
                               Width="70" Height="44"
                               FontSize="18" Padding="0"
                               Margin="0,-0,15,0" />
                        </WrapPanel>

                        <!-- Progress Bar -->
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <ProgressBar Style="{StaticResource TimerProgressStyle}" 
                                 Value="{Binding CurrentPosition}"   Maximum="{Binding TotalDuration}"/>

                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0">
                                <TextBlock Text="{Binding CurrentPositionText}" 
                                          FontSize="11" Foreground="#FF6B7280"/>
                                <TextBlock Text="{Binding TotalDurationText}" 
                                          FontSize="11" Foreground="#FF6B7280"/>
                            </StackPanel>
                        </Grid>

                        <!-- Volume and Controls -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="🔄" 
                                   Command="{Binding RestartAudioCommand}"
                                   Style="{StaticResource SmallIconButtonStyle}"
                                   ToolTip="Restart Audio"
                                   Margin="0,0,8,0"/>

                            <TextBlock Text="🔊" FontSize="16" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,8,0"/>

                            <Slider Value="{Binding Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                   Minimum="0" Maximum="1" 
                                   Width="80" Height="24"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Questions Section -->
        <ScrollViewer Margin="0,160,0,80" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Background="Transparent">
            <StackPanel Margin="24,16,24,24">
                <ItemsControl ItemsSource="{Binding Questions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource QuestionCardStyle}">
                                <StackPanel>
                                    <!-- Question Header -->
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Số thứ tự câu hỏi -->
                                        <Border Grid.Column="0" 
                                               Background="#FF6366F1" 
                                               CornerRadius="6" 
                                               Width="28" Height="28"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="{Binding QuestionNumber}" 
                                                      FontSize="14" FontWeight="Bold"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- 🔹 Câu hỏi (đã chuyển sang RichTextBox) -->
                                        <RichTextBox Grid.Column="1"
                                                     IsReadOnly="True"
                                                     BorderThickness="0"
                                                     FontSize="16"
                                                     FontWeight="Medium"
                                                     Foreground="#FF1F2937"
                                                     Background="Transparent"
                                                     
                                                     
                                                     VerticalAlignment="Center">
                                            <FlowDocument>
                                                <Paragraph>
                                                    <Run Text="{Binding QuestionText}" />
                                                </Paragraph>
                                            </FlowDocument>
                                        </RichTextBox>

                                        <!-- Trạng thái đã trả lời -->
                                        <Border Grid.Column="2" 
                                               Background="{Binding IsAnswered}"
                                               CornerRadius="4" 
                                               Padding="8,4">
                                            <TextBlock Text="{Binding IsAnswered}" 
                                                      FontSize="11" FontWeight="Medium"
                                                      Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- 🔸 Answer Options (đã chuyển sang RichTextBox) -->
                                    <StackPanel Margin="0,0,0,0">
                                        <RadioButton IsChecked="{Binding IsOption1Selected}"
                                                    Style="{StaticResource AnswerOptionStyle}">
                                            <RadioButton.Content>
                                                <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                             FontSize="14"
                                                             Foreground="#FF374151"
                                                             Background="Transparent"
                                                             >
                                                    <FlowDocument>
                                                        <Paragraph>
                                                            <Run Text="{Binding Option1}" />
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                            </RadioButton.Content>
                                        </RadioButton>

                                        <RadioButton IsChecked="{Binding IsOption2Selected}"
                                                    Style="{StaticResource AnswerOptionStyle}">
                                            <RadioButton.Content>
                                                <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                             FontSize="14"
                                                             Foreground="#FF374151"
                                                             Background="Transparent"
                                                            >
                                                    <FlowDocument>
                                                        <Paragraph>
                                                            <Run Text="{Binding Option2}" />
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                            </RadioButton.Content>
                                        </RadioButton>

                                        <RadioButton IsChecked="{Binding IsOption3Selected}"
                                                    Style="{StaticResource AnswerOptionStyle}">
                                            <RadioButton.Content>
                                                <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                             FontSize="14"
                                                             Foreground="#FF374151"
                                                             Background="Transparent"
                                                             >
                                                    <FlowDocument>
                                                        <Paragraph>
                                                            <Run Text="{Binding Option3}" />
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                            </RadioButton.Content>
                                        </RadioButton>

                                        <RadioButton IsChecked="{Binding IsOption4Selected}"
                                                    Style="{StaticResource AnswerOptionStyle}">
                                            <RadioButton.Content>
                                                <RichTextBox IsReadOnly="True" BorderThickness="0"
                                                             FontSize="14"
                                                             Foreground="#FF374151"
                                                             Background="Transparent"
                                                             >
                                                    <FlowDocument>
                                                        <Paragraph>
                                                            <Run Text="{Binding Option4}" />
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Fixed Bottom Section -->
        <Border Height="80" VerticalAlignment="Bottom" 
               Background="White" 
               BorderThickness="0,1,0,0"
               BorderBrush="#FFE5E7EB"
               Panel.ZIndex="100">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="90" ShadowDepth="1" BlurRadius="8" Opacity="0.08"/>
            </Border.Effect>

            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Progress Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FFECFDF5" CornerRadius="6" Padding="12,6" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock FontSize="13" Foreground="#FF065F46">
                                <Run Text="{Binding AnsweredCount}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding TotalQuestions}"/>
                                <Run Text="answered"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{Binding CompletionMessage}" 
                              FontSize="13" Foreground="#FF6B7280"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Submit Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Review Answers" 
                           Command="{Binding ReviewAnswersCommand}"
                           Style="{StaticResource CompactButtonStyle}"
                           Background="Transparent"
                           Foreground="#FF6366F1"
                           BorderThickness="1"
                           BorderBrush="#FF6366F1"
                           Margin="0,0,12,0"/>

                    <Button Content="Submit Test" 
                           Command="{Binding SubmitCommand}"
                           Style="{StaticResource CompactButtonStyle}"
                           IsEnabled="{Binding CanSubmit}"
                           FontWeight="Bold"/>
                </StackPanel>
                <Popup IsOpen="{Binding IsPopupOpen}"
               Placement="MousePoint"
               StaysOpen="False">
                    <Border Background="#FF111827" CornerRadius="6" Padding="8,4">
                        <TextBlock Text="➕ Thêm vào từ vựng của tôi"
                           Foreground="White" FontSize="13"
                           Cursor="Hand">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding AddToVocabularyCommand}"
                                      CommandParameter="{Binding SelectedWord}" />
                            </TextBlock.InputBindings>
                        </TextBlock>
                    </Border>
                </Popup>
            </Grid>
        </Border>
        <Grid Visibility="{Binding IsResultPopupVisible, Converter={StaticResource BoolToVisibilityConverter}}"
      Background="#80000000"
      Panel.ZIndex="100">

            <!-- Popup Content -->
            <Border Background="White" 
            CornerRadius="16" 
            Width="420"
            MaxHeight="550"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0" BlurRadius="40" Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Close Button -->
                    <Button Grid.Row="0" 
                    Content="✕" 
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="36" Height="36"
                    Margin="12,12,12,0"
                    Background="Transparent"
                    Foreground="#FF9CA3AF"
                    BorderThickness="0"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF3F4F6"/>
                                        <Setter Property="Foreground" Value="#FF374151"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Main Content -->
                    <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="40,10,40,20">
                        <StackPanel>

                            <!-- Success Icon with Animation -->
                            <Border Width="100" Height="100"
                            Background="#FFF0F9FF"
                            CornerRadius="50"
                            Margin="0,0,0,24">
                                <Viewbox Width="60" Height="60">
                                    <TextBlock Text="🏆" Foreground="#FFFBBF24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                        <TextBlock.RenderTransform>
                                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" 
                                                    CenterX="30" CenterY="30"/>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 From="0" To="1" Duration="0:0:0.5"
                                                                 EasingFunction="{StaticResource BackEase}"/>
                                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 From="0" To="1" Duration="0:0:0.5"
                                                                 EasingFunction="{StaticResource BackEase}"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                </Viewbox>
                            </Border>

                            <!-- Title -->
                            <TextBlock Text="{Binding ResultTitle}" 
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FF1F2937"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                            <!-- Subtitle -->
                            <TextBlock Text="{Binding ResultSubtitle}" 
                               FontSize="14"
                               Foreground="#FF6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,28"/>

                            <!-- Score Card -->
                            <Border Background="#FFF8FAFC"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Correct Answers -->
                                    <StackPanel Grid.Column="0" 
                                        HorizontalAlignment="Center">
                                        <TextBlock Text="✓" 
                                           FontSize="28"
                                           Foreground="#FF10B981"
                                           TextAlignment="Center"
                                           Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding CorrectAnswers}" 
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="#FF10B981"
                                           TextAlignment="Center"/>
                                        <TextBlock Text="Câu đúng" 
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           TextAlignment="Center"
                                           Margin="0,6,0,0"/>
                                    </StackPanel>

                                    <!-- Divider -->
                                    <Border Grid.Column="1" 
                                    Width="1" 
                                    Background="#FFE5E7EB"
                                    Margin="24,0"/>

                                    <!-- Total Score -->
                                    <StackPanel Grid.Column="2" 
                                        HorizontalAlignment="Center">
                                        <TextBlock Text="★" 
                                           FontSize="28"
                                           Foreground="#FFFBBF24"
                                           TextAlignment="Center"
                                           Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TotalScore}"
                                               FontSize="35"
                                               FontWeight="Bold"
                                               Foreground="#FF6366F1"/>
                                            <TextBlock Text="/" 
                                               FontSize="20" 
                                               Foreground="#FF9CA3AF"
                                               Margin="4,8,4,0"/>
                                            <TextBlock Text="{Binding MaxScore}" 
                                               FontSize="20" 
                                               Foreground="#FF9CA3AF"
                                               Margin="0,8,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="Điểm" 
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           TextAlignment="Center"
                                           Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Performance Message -->
                            <Border Background="{Binding PerformanceColor}"
                            CornerRadius="8"
                            Padding="16,12">
                                <TextBlock Text="{Binding PerformanceMessage}" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2" 
                  Margin="40,0,40,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                        Content="📋 Xem đáp án"
                        Command="{Binding ReviewAnswersCommand}"
                        Style="{StaticResource CompactSecondaryButtonStyle}"
                        Height="44"/>

                        <Button Grid.Column="2"
                        Content="✨ Tiếp tục"
                        Command="{Binding ContinueCommand}"
                        Style="{StaticResource CompactButtonStyle}"
                        Height="44"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
