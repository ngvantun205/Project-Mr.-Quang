<Window x:Class="TDEduEnglish.Views.SuperAdminWindow.ManageQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.SuperAdminWindow"
        mc:Ignorable="d"
        Title="ManageQuizWindow" Height="800" Width="1200">
    <Window.Resources>
        <!-- Small reusable styles -->
        <Style x:Key="SmallPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="8" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid" x:Key="CompactDataGrid">
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF7F8FB" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="6">
            <TextBlock Text="Reading Lessons Management" FontSize="20" FontWeight="Bold" Foreground="#FF1F2937"/>
            <TextBlock Text="  •  Manage lessons annd questions" Foreground="#FF6B7280" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Controls: Search / Filter / Import / CRUD -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,12,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="6" />
                    <TextBox Width="260" Margin="6,0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Text="Level:" VerticalAlignment="Center" Margin="6,0,0,0"/>
                    <ComboBox Width="140" Margin="6,0"
                              ItemsSource="{Binding AvailableLevels}" 
                              SelectedItem="{Binding SelectedLevel}" />

                    <Button Style="{StaticResource SmallPrimaryButton}" Command="{Binding ClearFilterCommand}" Margin="12,0">Clear</Button>
                    <Button Style="{StaticResource SmallPrimaryButton}" Command="{Binding FilterCommand}" Margin="12,0">Filter</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Content="Import JSON" Style="{StaticResource SmallPrimaryButton}" Command="{Binding ImportQuizCommand}"/>
                    <Button Content="Add Quiz" Style="{StaticResource SmallPrimaryButton}" Command="{Binding AddQuizCommand}"/>
                    <Button Content="Update" Style="{StaticResource SmallPrimaryButton}" Command="{Binding UpdateQuizCommand}"/>
                    <Button Content="Delete" Style="{StaticResource SmallPrimaryButton}" Command="{Binding DeleteQuizCommand}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main area: left = lessons grid, right = lesson details & questions -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="470*"/>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="683*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Lessons list -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Reading Lessons" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                    <DataGrid Grid.Row="1" Style="{StaticResource CompactDataGrid}"
                              ItemsSource="{Binding Quizzes}"
                              SelectedItem="{Binding SelectedQuiz, Mode=TwoWay}"
                              SelectionMode="Single">
                        <DataGrid.Columns >
                            <DataGridTextColumn Header="#" Binding="{Binding QuizId}" Width="50"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="100"/>
                            <DataGridTextColumn Header="Topic" Binding="{Binding Topic}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Right: Selected lesson details + questions -->
            <Border Style="{StaticResource CardBorder}" Grid.ColumnSpan="3" Margin="470,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Lesson header & audio -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="Lesson Details" FontWeight="SemiBold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                            <Button Content="Refresh" Style="{StaticResource SmallPrimaryButton}" Command="{Binding RefreshCommand}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Form (no placeholders) -->
                    <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                        <StackPanel>
                            <TextBlock Text="Title" />
                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 5 0 " />
                            <TextBlock Text="Level" Margin="0,6,0,0"/>
                            <ComboBox ItemsSource="{Binding AvailableLevels}" SelectedItem="{Binding Level}" >
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Beginner"/>
                                    <ComboBoxItem Content="Intermediate"/>
                                    <ComboBoxItem Content="Advanced"/>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Topic" />
                            <TextBox Text="{Binding Topic, UpdateSourceTrigger=PropertyChanged}" />
                            <StackPanel Orientation="Horizontal">
                            </StackPanel>
                        </StackPanel>
                    </UniformGrid>

                    <!-- Questions management -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Questions" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button Content="Add Q" Style="{StaticResource SmallPrimaryButton}" Command="{Binding AddQuizQuestionCommand}" Margin="8,0"/>
                            <Button Content="Del Q" Style="{StaticResource SmallPrimaryButton}" Command="{Binding DeleteQuizQuestionCommand}" />
                            <Button Content="Update Q" Style="{StaticResource SmallPrimaryButton}" Command="{Binding UpdateQuizQuestionCommand}" />
                            <Button Content="Import JSON" Style="{StaticResource SmallPrimaryButton}" Command="{Binding ImportQuizQuestionCommand}" />

                        </StackPanel>

                        <DataGrid Grid.Row="1" Style="{StaticResource CompactDataGrid}" 
                                  ItemsSource="{Binding QuizQuestions}"
                                  SelectedItem="{Binding SelectedQuizQuestion, Mode=TwoWay}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding QuizQuestionId}" Width="50"/>
                                <DataGridTextColumn Header="Question" Binding="{Binding QuestionText}" Width="150"/>
                                <DataGridTextColumn Header="Correct" Binding="{Binding CorrectAnswer}" Width="120"/>
                                <DataGridTextColumn Header="Explaination" Binding="{Binding Explaination}" Width="120"/>
                                <DataGridTextColumn Header="Option1" Binding="{Binding Option1}" Width="120"/>
                                <DataGridTextColumn Header="Option2" Binding="{Binding Option2}" Width="120"/>
                                <DataGridTextColumn Header="Option3" Binding="{Binding Option3}" Width="120"/>
                                <DataGridTextColumn Header="Option4" Binding="{Binding Option4}" Width="120"/>
                                <DataGridTextColumn Header="Answer Time" Binding="{Binding AnswerTime}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
