<Window x:Class="TDEduEnglish.Views.SuperAdminWindow.ManageQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.SuperAdminWindow"
        mc:Ignorable="d"
        Title="ManageQuizWindow" Height="800" Width="1500">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3730A3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4F46E5"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                    <Setter Property="Foreground" Value="#1E1B4B"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="16" Direction="270" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL - Quizzes -->
        <Border Grid.Column="0" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="📝" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Quizzes" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#1F2937"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search & Filter -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBox" 
                           Grid.Column="0"
                           Style="{StaticResource ModernTextBox}"
                           Tag="🔍 Search quizzes by title, topic, or level..."
                           >
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{TemplateBinding Background}" 
                                      BorderBrush="{TemplateBinding BorderBrush}" 
                                      BorderThickness="{TemplateBinding BorderThickness}" 
                                      CornerRadius="8">
                                    <Grid>
                                        <TextBlock Text="{TemplateBinding Tag}" 
                                                 Foreground="#9CA3AF" 
                                                 FontSize="14"
                                                 Padding="12,10"
                                                 IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <ScrollViewer x:Name="PART_ContentHost" Padding="12,10"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Button Grid.Column="2" 
                          Content="🗑️ Clear" 
                          Style="{StaticResource ModernButton}"
                          Background="#6B7280"
                          Padding="16,10"
                          />
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="➕ Add Quiz" 
                          Style="{StaticResource SuccessButton}"
                          Command="{Binding AddQuizCommand}"
                          Margin="0,0,8,0"/>
                    <Button Content="📥 Import JSON" 
                          Style="{StaticResource ModernButton}"
                          Command="{Binding ImportQuizCommand}"
                          Margin="0,0,8,0"/>
                    <Button Content="💾 Update" 
                          Style="{StaticResource ModernButton}"
                          Background="#F59E0B"
                          Command="{Binding UpdateQuizCommand}"/>
                </StackPanel>

                <!-- Quizzes DataGrid -->
                <DataGrid Grid.Row="3" 
                        x:Name="QuizzesDataGrid"
                        ItemsSource="{Binding Quizzes}"
                        SelectedItem="{Binding SelectedQuiz, Mode=TwoWay}"
                        Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding QuizId}" Width="60"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Topic" Binding="{Binding Topic}" Width="100"/>
                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" 
                                          Style="{StaticResource DeleteButton}"
                                          Command="{Binding DataContext.DeleteQuizCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}"
                                          Padding="8,4"
                                          ToolTip="Delete quiz"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Quiz Count -->
                <TextBlock Grid.Row="4" 
                         Margin="0,16,0,0"
                         FontSize="13"
                         Foreground="#6B7280">
                    <Run Text="Total quizzes:"/>
                    <Run Text="{Binding Quizzes.Count, Mode=OneWay}" FontWeight="Bold" Foreground="#4F46E5"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- RIGHT PANEL - Quiz Questions -->
        <Border Grid.Column="2" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="❓" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Quiz Questions" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#1F2937"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Selected Quiz Info -->
                <Border Grid.Row="1" 
                      Background="#EEF2FF" 
                      CornerRadius="8" 
                      Padding="16,12"
                      Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                            <TextBlock Text="Selected Quiz:" 
                                     FontSize="12" 
                                     Foreground="#6B7280" 
                                     Margin="0,0,0,4"/>
                            <TextBlock FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="#4F46E5">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding SelectedQuiz.Title}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedQuiz}" Value="{x:Null}">
                                                <Setter Property="Text" Value="No quiz selected"/>
                                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Topic:" FontSize="11" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding SelectedQuiz.Topic, TargetNullValue='N/A'}" 
                                     FontSize="13" 
                                     FontWeight="Medium" 
                                     Foreground="#374151"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Level:" FontSize="11" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding SelectedQuiz.Level, TargetNullValue='N/A'}" 
                                     FontSize="13" 
                                     FontWeight="Medium" 
                                     Foreground="#374151"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="➕ Add Question" 
                          Style="{StaticResource SuccessButton}"
                          Command="{Binding AddQuizQuestionCommand}"
                          Margin="0,0,8,0"/>
                    <Button Content="📥 Import JSON" 
                          Style="{StaticResource ModernButton}"
                          Command="{Binding ImportQuizQuestionCommand}"
                          Margin="0,0,8,0"/>
                    <Button Content="💾 Update" 
                          Style="{StaticResource ModernButton}"
                          Background="#F59E0B"
                          Command="{Binding UpdateQuizQuestionCommand}"/>
                </StackPanel>

                <!-- Questions DataGrid -->
                <DataGrid Grid.Row="3" 
                        ItemsSource="{Binding QuizQuestions}"
                        SelectedItem="{Binding SelectedQuizQuestion, Mode=TwoWay}"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="3"
                        Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding QuizQuestionId}" Width="60"/>
                        <DataGridTextColumn Header="Question" Binding="{Binding QuestionText}" Width="150"/>
                        <DataGridTextColumn Header="Correct Answer" Binding="{Binding CorrectAnswer}" Width="120"/>
                        <DataGridTextColumn Header="Option1" Binding="{Binding Option1}" Width="120"/>
                        <DataGridTextColumn Header="Option2" Binding="{Binding Option2}" Width="120"/>
                        <DataGridTextColumn Header="Option3" Binding="{Binding Option3}" Width="120"/>
                        <DataGridTextColumn Header="Option4" Binding="{Binding Option4}" Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" 
                                          Style="{StaticResource DeleteButton}"
                                          Command="{Binding DataContext.DeleteQuizQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}"
                                          Padding="8,4"
                                          ToolTip="Delete question"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Question Count -->
                <TextBlock Grid.Row="4" 
                         Margin="0,16,0,0"
                         FontSize="13"
                         Foreground="#6B7280">
                    <Run Text="Total questions:"/>
                    <Run Text="{Binding QuizQuestions.Count, Mode=OneWay}" FontWeight="Bold" Foreground="#4F46E5"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
