<Window x:Class="TDEduEnglish.Views.SuperAdminWindow.ManageSpeakingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.SuperAdminWindow"
        mc:Ignorable="d"
        Title="ManageSpeakingWindow" Height="740" Width="1350">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 🧭 LEFT: TOPICS TABLE -->
        <Border Grid.Column="0" CornerRadius="12" Background="White" Padding="16" Margin="0,0,10,0"
                BorderBrush="#E5E7EB" BorderThickness="1" >
            <DockPanel>
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <TextBlock Text="📚 Topics" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Stretch">
                        <ComboBox Width="150" Margin="0,0,8,0" 
                                  Text="Filter by Level"
                                  SelectedItem="{Binding SelectedLevel, Mode=TwoWay}">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Beginner"/>
                            <ComboBoxItem Content="Intermediate"/>
                            <ComboBoxItem Content="Advanced"/>
                        </ComboBox>
                        <Button Content="Add" Width="40" Margin="0,0,4,0"
                                Background="#3B82F6" Foreground="White" Command="{Binding AddTopicCommand}"/>
                        <Button Content="Update" Width="50" Margin="0,0,4,0"
                                Background="#10B981" Foreground="White" Command="{Binding UpdateTopicCommand}"/>
                        <Button Content="Delete" Width="50" Margin="0,0,4,0"
                                Background="#EF4444" Foreground="White"
                                Command="{Binding DeleteTopicCommand}"
                                CommandParameter="{Binding SelectedTopic}"/>
                        <Button Content="Import JSON" Width="80"
                                Background="#6366F1" Foreground="White"
                                Command="{Binding ImportTopicFromJsonFileCommand}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Topics Table -->
                <DataGrid ItemsSource="{Binding Topics}" 
                          SelectedItem="{Binding SelectedTopic, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          RowHeight="36"
                          BorderThickness="0"
                          Background="White"
                          Foreground="#111827"
                          AlternatingRowBackground="#F3F4F6">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TopicId}" Width="50" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Topic Name" Binding="{Binding TopicName}" Width="2*"/>
                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="*" />
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- 🗣️ RIGHT: SPEAKING SENTENCES TABLE -->
        <Border Grid.Column="1" CornerRadius="12" Background="White" Padding="16"
                BorderBrush="#E5E7EB" BorderThickness="1">
            <DockPanel>
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <TextBlock Text="🗣️ Speaking Sentences" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Add" Width="70" Margin="0,0,4,0"
                                Background="#3B82F6" Foreground="White" Command="{Binding AddSpeakingSentenceCommand}"/>
                        <Button Content="Update" Width="80" Margin="0,0,4,0"
                                Background="#10B981" Foreground="White" Command="{Binding UpdateSpeakingSentenceCommand}"/>
                        <Button Content="Delete" Width="80" Margin="0,0,4,0"
                                Background="#EF4444" Foreground="White"
                                Command="{Binding DeleteSpeakingSentenceCommand}"
                                CommandParameter="{Binding SelectedSentence}"/>
                        <Button Content="Import JSON" Width="110"
                                Background="#6366F1" Foreground="White"
                                Command="{Binding ImportSpeakingSentenceFromJsonFileCommand}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Speaking Sentences Table -->
                <DataGrid ItemsSource="{Binding Sentences}" 
                          SelectedItem="{Binding SelectedSentence, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          RowHeight="36"
                          BorderThickness="0"
                          Background="White"
                          Foreground="#111827"
                          AlternatingRowBackground="#F3F4F6">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding SpeakingSentenceId}" Width="50" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Topic ID" Binding="{Binding TopicId}" Width="60"/>
                        <DataGridTextColumn Header="Sentence (EN)" Binding="{Binding SentenceText}" Width="2*"/>
                        <DataGridTextColumn Header="Sentence (VN)" Binding="{Binding Level}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
