<Window x:Class="TDEduEnglish.Views.SuperAdminWindow.ManageReadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish.Views.SuperAdminWindow"
        mc:Ignorable="d"
        Title="ManageReadingWindow" Height="800" Width="1200">
    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FFF8FAFC">
        <TabControl Margin="16" Background="White">
            <!-- TAB 1: Reading Lessons -->
            <TabItem Header="📖 Reading Lessons">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="182*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="933*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12" Grid.ColumnSpan="3">
                        <Label Content="Search:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="4,0,16,0" Text="{Binding LessonSearchText}"/>
                        <Label Content="Level:" VerticalAlignment="Center"/>
                        <ComboBox Width="120" Margin="4,0,0,0"
                                  ItemsSource="{Binding Levels}" SelectedItem="{Binding SelectedLevel}"/>
                        <Button Content="Search" Command="{Binding SearchCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Lessons DataGrid -->
                    <DataGrid x:Name="ReadingLessonDataGridView" Grid.Row="1" ItemsSource="{Binding ReadingLessons}" SelectedItem="{Binding SelectedReadingLesson, Mode=TwoWay}"
                              AutoGenerateColumns="False" Grid.ColumnSpan="3"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ReadingLessonId}" Width="80"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="300"/>
                            <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="100"/>
                            <DataGridTextColumn Header="Suggested Time" Binding="{Binding SuggestedTime}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- CRUD Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Column="2">
                        <Button Content="Add" Command="{Binding AddReadingLessonCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Edit" Command="{Binding EditReadingLessonCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Delete"  Command="{Binding DeleteReadingLessonCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Import JSON"  Command="{Binding ImportReadingLessonCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: Reading Questions -->
            <TabItem Header="❓ Reading Questions">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <Label Content="Lesson ID:" VerticalAlignment="Center"/>
                        <TextBox Width="80" Margin="4,0,16,0" Text="{Binding FilterLessonId}"/>
                        <Label Content="Question:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="4,0,0,0" Text="{Binding QuestionSearchText}"/>
                        <Button Content="Search" Style="{StaticResource PrimaryButtonStyle}" Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Questions DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ReadingQuestions}" SelectedItem="{Binding SelectedReadingQuestion, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ReadingQuestionId}" Width="60"/>
                            <DataGridTextColumn Header="Lesson ID" Binding="{Binding ReadingLessonId}" Width="80"/>
                            <DataGridTextColumn Header="No." Binding="{Binding QuestionNumber}" Width="50"/>
                            <DataGridTextColumn Header="Text" Binding="{Binding QuestionText}" Width="*"/>
                            <DataGridTextColumn Header="Correct Answer" Binding="{Binding CorrectAnswer}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- CRUD Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Add"  Command="{Binding AddReadingQuestionCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Edit" Command="{Binding EditReadingQuestionCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Delete" Command="{Binding DeleteReadingQuestionCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Import JSON" Command="{Binding ImportReadingQuestionCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
