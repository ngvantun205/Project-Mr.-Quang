<Page x:Class="TDEduEnglish.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      xmlns:helpers="clr-namespace:TDEduEnglish.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="RegisterPage">

    <Page.Resources>
        <!-- Modern Input Field Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         HorizontalScrollBarVisibility="Hidden" 
                                         VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         HorizontalScrollBarVisibility="Hidden" 
                                         VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="54"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="2" BlurRadius="12" Opacity="0.25"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF9CA3AF"/>
                                <Setter Property="Foreground" Value="#FF6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Social Button Style -->
        <Style x:Key="SocialButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF9FAFB"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF5855E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Checkbox Style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="Border" 
                                    Background="White" 
                                    BorderBrush="#FFE5E7EB" 
                                    BorderThickness="2" 
                                    CornerRadius="4" 
                                    Width="20" Height="20" 
                                    VerticalAlignment="Top" 
                                    Margin="0,0,8,0">
                                <Grid>
                                    <Path x:Name="CheckMark" 
                                          Data="M 2 6 L 6 10 L 14 2" 
                                          Stroke="#FF6366F1" 
                                          StrokeThickness="2" 
                                          Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <ContentPresenter VerticalAlignment="Top"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#FFF3F4F6"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8FAFC" Offset="0"/>
                <GradientStop Color="#FFF1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Decorative Section -->
        <Grid Grid.Column="0" Margin="40,60,20,60">
            <Border CornerRadius="20" Background="White" Opacity="0.7">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="8" BlurRadius="25" Opacity="0.1"/>
                </Border.Effect>
            </Border>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                <Border Background="#FF6366F1" CornerRadius="20" Width="80" Height="80" Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="4" BlurRadius="15" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="🎓" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Join the learning community" FontSize="28" FontWeight="Bold" 
                          Foreground="#FF1F2937" HorizontalAlignment="Center" TextWrapping="Wrap"
                          Margin="0,0,0,16"/>

                <TextBlock Text="More than 10,000 learners have trusted and achieved their goals with TDEdu"
                          FontSize="16" Foreground="#FF6B7280" HorizontalAlignment="Center" 
                          TextWrapping="Wrap" TextAlignment="Center"/>

                <!-- Stats -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,32,0,0">
                    <StackPanel Margin="0,0,24,0" HorizontalAlignment="Center">
                        <TextBlock Text="10K+" FontSize="20" FontWeight="Bold" Foreground="#FF6366F1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Learners" FontSize="12" Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,24,0" HorizontalAlignment="Center">
                        <TextBlock Text="500+" FontSize="20" FontWeight="Bold" Foreground="#FF10B981" HorizontalAlignment="Center"/>
                        <TextBlock Text="Lessons" FontSize="12" Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="98%" FontSize="20" FontWeight="Bold" Foreground="#FFF59E0B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Satisfaction" FontSize="12" Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Main Registration Form -->
        <Border Grid.Column="1" Background="White" CornerRadius="24" Margin="0,40,0,40" Padding="48,40">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="10" BlurRadius="30" Opacity="0.1"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,32">
                        <Border Background="#FF6366F1" CornerRadius="16" Width="64" Height="64" 
                               HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                            </Border.Effect>
                            <TextBlock Text="TD" FontSize="24" FontWeight="Bold" Foreground="White" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Create Account" FontSize="28" FontWeight="Bold" 
                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                        <TextBlock Text="Start your learning journey today" FontSize="14" 
                                  Foreground="#FF6B7280" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Social Login -->
                    <StackPanel Margin="0,0,0,24">
                        <Button Content="🔍 Sign up with Google" Style="{StaticResource SocialButtonStyle}" 
                               Command="{Binding GoogleRegisterCommand}" Margin="0,0,0,12"/>
                        <Button Content="📘 Sign up with Facebook" Style="{StaticResource SocialButtonStyle}"
                               Command="{Binding FacebookRegisterCommand}"/>
                    </StackPanel>

                    <!-- Divider -->
                    <Grid Margin="0,0,0,24">
                        <Border Height="1" Background="#FFE5E7EB"/>
                        <Border Background="White" Padding="16,0" HorizontalAlignment="Center">
                            <TextBlock Text="Or sign up with email" FontSize="14" Foreground="#FF6B7280"/>
                        </Border>
                    </Grid>

                    <!-- Registration Form -->
                    <StackPanel>
                        <!-- Full Name -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Full Name" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FF374151" Margin="0,0,0,8"/>
                            <TextBox x:Name="FullNameTextBox" 
                                    Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                    Tag="Enter your full name"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Email" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FF374151" Margin="0,0,0,8"/>
                            <TextBox x:Name="EmailTextBox" 
                                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                    Tag="example@email.com"/>
                        </StackPanel>

                        <!-- Phone Number -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Phone Number" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FF374151" Margin="0,0,0,8"/>
                            <TextBox x:Name="PhoneTextBox" 
                                    Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                    Tag="0123456789"/>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FF374151" Margin="0,0,0,8"/>
                            <PasswordBox x:Name="PasswordBox" helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />
                        </StackPanel>

                        <!-- Confirm Password -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Confirm Password" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FF374151" Margin="0,0,0,8"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}" />
                        </StackPanel>

                        <!-- Terms and Privacy -->
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,0,24"
                                 IsChecked="{Binding AcceptTerms}">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="I agree to the "/>
                                <Run Text="Terms of Service" Foreground="#FF6366F1" 
                                     TextDecorations="Underline" Cursor="Hand"/>
                                <Run Text=" and "/>
                                <Run Text="Privacy Policy" Foreground="#FF6366F1" 
                                     TextDecorations="Underline" Cursor="Hand"/>
                            </TextBlock>
                        </CheckBox>

                        <!-- Register Button -->
                        <Button Content="Register" Style="{StaticResource PrimaryButtonStyle}" 
                               Command="{Binding RegisterCommand}" Margin="0,0,0,24"/>

                        <!-- Login Link -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Already have an account? " FontSize="14" Foreground="#FF6B7280" 
                                      VerticalAlignment="Center"/>
                            <Button Content="Login now" Style="{StaticResource LinkButtonStyle}" 
                                   FontSize="14" Command="{Binding NavigateToLoginCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Decorative Section -->
        <Grid Grid.Column="2" Margin="20,60,40,60">
            <Border CornerRadius="20" Background="White" Opacity="0.7">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="8" BlurRadius="25" Opacity="0.1"/>
                </Border.Effect>
            </Border>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                <!-- Feature List -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#FF10B981" CornerRadius="12" Width="48" Height="48" 
                               Margin="0,0,16,0">
                            <TextBlock Text="✓" FontSize="20" Foreground="White" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Learn with AI" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Smart learning powered by AI" FontSize="12" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#FFF59E0B" CornerRadius="12" Width="48" Height="48" 
                               Margin="0,0,16,0">
                            <TextBlock Text="⭐" FontSize="20" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Personalized" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Customized learning path for you" FontSize="12" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#FFEF4444" CornerRadius="12" Width="48" Height="48" 
                               Margin="0,0,16,0">
                            <TextBlock Text="🏆" FontSize="20" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Certificate" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Earn certificates after completion" FontSize="12" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FF8B5CF6" CornerRadius="12" Width="48" Height="48" 
                               Margin="0,0,16,0">
                            <TextBlock Text="👥" FontSize="20" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Community" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937"/>
                            <TextBlock Text="Connect with other learners" FontSize="12" 
                                      Foreground="#FF6B7280"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
