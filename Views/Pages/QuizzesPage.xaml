            <Button Content="Sports" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="10,0"/>
            <Button Content="Things" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="10,0"/>
