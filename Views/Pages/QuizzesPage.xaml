      Title="QuizzesPage">

    <Grid Margin="20">

        <!-- ===== HEADER NAVIGATION ===== -->
        <Grid Height="80" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Logo & Name -->
                <ColumnDefinition Width="*"/>
                <!-- Menu + Search -->
                <ColumnDefinition Width="200"/>
                <!-- Right buttons -->
            </Grid.ColumnDefinitions>

            <!-- Logo + App Name -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="F:\admin\Download\appstore icon.png" Width="40" Height="40"/>
                <TextBlock Text="TdEdu" FontSize="24" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Menu + Search bar -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Home" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="5,0" Command="{Binding NavigateCommand}" CommandParameter="HomePage"/>
                <Button Content="Quizzes" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="5,0" Command="{Binding NavigateCommand}" CommandParameter="QuizzesPage"/>
                <TextBox Width="250" Height="30" Text="Search quizzes..." Foreground="Gray" Margin="10,0,5,0"/>
                <Button Content="Search" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}"/>
            </StackPanel>

            
        </Grid>

        <!-- ===== FILTER BAR ===== -->
        <StackPanel Orientation="Horizontal"
            Margin="0,100,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Height="30" Width="773">
