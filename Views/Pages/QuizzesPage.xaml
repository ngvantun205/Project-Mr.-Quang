<Page x:Class="TDEduEnglish.Views.Pages.QuizzesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="QuizzesPage">

    <Page.Resources>
        <!-- Modern Card Style - đồng bộ với MainWindow -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" Direction="270" 
                                            ShadowDepth="8" BlurRadius="30" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="ModernSearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Background gradient giống MainWindow -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8FAFC" Offset="0"/>
                <GradientStop Color="#FFF1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel Margin="40,20,40,40">

                <!-- Header Section -->
                <StackPanel Margin="0,0,0,32">
                    <TextBlock Text="Bài kiểm tra" FontSize="36" FontWeight="Bold" 
                              Foreground="#FF1F2937" Margin="0,0,0,8"/>
                    <TextBlock Text="Thử thách bản thân với các bài kiểm tra đa dạng và thú vị" 
                              FontSize="16" Foreground="#FF6B7280"/>
                </StackPanel>

                <!-- Search and Stats Section -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" 
                           Padding="0" MaxWidth="500" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Style="{StaticResource ModernSearchBoxStyle}"
                                    Text="Tìm kiếm bài kiểm tra..." Foreground="#FF9CA3AF"
                                    BorderThickness="0" Width="350"/>

                            <Button Grid.Column="1" Content="🔍" FontSize="16" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Width="48" Height="44" Margin="8"/>
                        </Grid>
                    </Border>

                    <!-- Quick Stats -->
                    <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" 
                           Padding="20,12" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="124" FontSize="20" FontWeight="Bold" 
                                          Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                                <TextBlock Text="Bài kiểm tra" FontSize="12" 
                                          Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="89%" FontSize="20" FontWeight="Bold" 
                                          Foreground="#FF10B981" HorizontalAlignment="Center"/>
                                <TextBlock Text="Hoàn thành" FontSize="12" 
                                          Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="8.2" FontSize="20" FontWeight="Bold" 
                                          Foreground="#FFF59E0B" HorizontalAlignment="Center"/>
                                <TextBlock Text="Điểm TB" FontSize="12" 
                                          Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Filter Categories -->
                <Border Style="{StaticResource ModernCardStyle}" Padding="24,16" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Danh mục" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#FF374151" Margin="0,0,0,12"/>

                        <WrapPanel Orientation="Horizontal">
                            <Button Content="📚 Từ vựng" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="⚙️ Ngữ pháp" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="👂 Nghe hiểu" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="📖 Đọc hiểu" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="🗣️ Giao tiếp" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="🏢 Business" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="🎓 Academic" Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="📊 IELTS" Style="{StaticResource FilterButtonStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Quiz Cards Grid -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               Margin="0,0,0,20" VerticalAlignment="Center">
                        <TextBlock Text="Bài kiểm tra phổ biến" FontSize="20" FontWeight="Bold" 
                                  Foreground="#FF1F2937" VerticalAlignment="Center"/>
                        <Button Content="Xem tất cả →" Style="{StaticResource FilterButtonStyle}"
                               Background="Transparent" BorderThickness="0" 
                               Foreground="#FF6366F1" Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Quiz Cards -->
                    <WrapPanel Grid.Row="1" Orientation="Horizontal" 
                              HorizontalAlignment="Left">

                        <!-- Quiz Card 1 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Image placeholder -->
                                <Border Grid.Row="0" Background="#FF6366F1" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📝" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="Vocabulary Quiz" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <!-- Content -->
                                <StackPanel Grid.Row="1" >
                                    <TextBlock Text="Từ vựng cơ bản" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Kiểm tra kiến thức từ vựng cơ bản với 20 câu hỏi thú vị" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFDBEAFE" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="20 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FF7C3AED"/>
                                            </Border>
                                            <Border Background="#FFECFDF5" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="15 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FF059669"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.8" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quiz Card 2 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FF10B981" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="⚙️" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="Grammar Test" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Row="1" >
                                    <TextBlock Text="Ngữ pháp nâng cao" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Thử thách với các câu hỏi ngữ pháp từ cơ bản đến nâng cao" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFFECACA" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="25 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFDC2626"/>
                                            </Border>
                                            <Border Background="#FFFEF3C7" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="30 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFD97706"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.6" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quiz Card 3 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FFF59E0B" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="👂" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="Listening Test" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Row="1" >
                                    <TextBlock Text="Nghe hiểu cơ bản" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Luyện tập kỹ năng nghe với audio chất lượng cao" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFEFF6FF" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="15 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FF2563EB"/>
                                            </Border>
                                            <Border Background="#FFECFDF5" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="20 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FF059669"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.9" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quiz Card 4 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FFDC2626" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📖" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="Reading Test" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Đọc hiểu nâng cao" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Phát triển kỹ năng đọc hiểu với các bài đọc đa dạng" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFDBEAFE" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="18 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FF7C3AED"/>
                                            </Border>
                                            <Border Background="#FFFEF3C7" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="25 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFD97706"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.7" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quiz Card 5 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FF7C3AED" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🎯" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="Mixed Practice" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Row="1" >
                                    <TextBlock Text="Luyện tập tổng hợp" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Kết hợp tất cả kỹ năng trong một bài kiểm tra toàn diện" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFFECACA" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="35 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFDC2626"/>
                                            </Border>
                                            <Border Background="#FFFEF3C7" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="45 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFD97706"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.5" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quiz Card 6 -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Width="280" Height="240" Margin="0,0,20,20" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FF0EA5E9" CornerRadius="12,12,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📊" FontSize="32" Margin="0,0,0,8"/>
                                        <TextBlock Text="IELTS Practice" FontSize="14" 
                                                  Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Row="1" >
                                    <TextBlock Text="IELTS Mock Test" Padding="20,16" FontSize="18" FontWeight="Bold" 
                                              Foreground="#FF1F2937" Margin="0,0,0,4"/>
                                    <TextBlock Text="Mô phỏng kỳ thi IELTS thực tế với format chuẩn quốc tế" 
                                              FontSize="13" Foreground="#FF6B7280" Padding="20,16"
                                              TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#FFFFE4E6" CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                <TextBlock Text="40 câu" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFDC2626"/>
                                            </Border>
                                            <Border Background="#FFFECACA" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="60 phút" FontSize="10" FontWeight="Medium" 
                                                          Foreground="#FFDC2626"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="⭐ 4.9" FontSize="12" 
                                                  Foreground="#FFF59E0B" FontWeight="Medium" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
