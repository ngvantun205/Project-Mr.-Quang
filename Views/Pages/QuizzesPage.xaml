<Page x:Class="TDEduEnglish.Views.Pages.QuizzesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="QuizzesPage">

    <Page.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="3" BlurRadius="15" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" Direction="270" 
                                            ShadowDepth="6" BlurRadius="25" Opacity="0.12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Button Style - Compact -->
        <Style x:Key="FilterButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FF6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quiz Card Style -->
        <Style x:Key="QuizCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="2" BlurRadius="12" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF6366F1" Direction="270" 
                                            ShadowDepth="4" BlurRadius="20" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Level Badge Style -->
        <Style x:Key="LevelBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8FAFC" Offset="0"/>
                <GradientStop Color="#FFF1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="30,20,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Practice Quizzes" FontSize="32" FontWeight="Bold" 
                          Foreground="#FF1F2937" Margin="0,0,0,6"/>
                <TextBlock Text="Master English through engaging practice quizzes" 
                          FontSize="15" Foreground="#FF6B7280"/>
            </StackPanel>

            <!-- Filter Section -->
            <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}" 
                   Padding="20,16" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Topic Filter -->
                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <TextBlock Text="Topic" FontSize="12" FontWeight="SemiBold" 
                                  Foreground="#FF374151" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="All" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"
                                       IsChecked="True"/>
                            <RadioButton Content="Biology" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Geography" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Mathematics" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="History" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Science" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Wonder of Words" GroupName="Topic" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Level Filter -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Level" FontSize="12" FontWeight="SemiBold" 
                                  Foreground="#FF374151" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="All" GroupName="Level" 
                                       Style="{StaticResource FilterButtonStyle}"
                                       IsChecked="True"/>
                            <RadioButton Content="Beginner" GroupName="Level" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Intermediate" GroupName="Level" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                            <RadioButton Content="Advanced" GroupName="Level" 
                                       Style="{StaticResource FilterButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quiz List Section -->
            <ScrollViewer Grid.Row="2" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="QuizListControl" ItemsSource="{Binding Quizzes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource QuizCardStyle}" 
                                   Margin="0,0,0,16" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon/Image Area -->
                                    <Border Grid.Column="0" Background="#FFF3F4F6" 
                                           CornerRadius="8" Width="70" Height="70"
                                           VerticalAlignment="Center">
                                        <TextBlock Text="📚" FontSize="32" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Quiz Info -->
                                    <StackPanel Grid.Column="1" Margin="16,0,16,0" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" 
                                                  FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" Margin="0,0,0,6"/>

                                        <StackPanel Orientation="Horizontal">
                                            <!-- Level Badge -->
                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border" BasedOn="{StaticResource LevelBadgeStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Level}" Value="Beginner">
                                                                <Setter Property="Background" Value="#FFDBEAFE"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Intermediate">
                                                                <Setter Property="Background" Value="#FFFEF3C7"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Advanced">
                                                                <Setter Property="Background" Value="#FFFECACA"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="Medium">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding Level}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Level}" Value="Beginner">
                                                                    <Setter Property="Foreground" Value="#FF7C3AED"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Level}" Value="Intermediate">
                                                                    <Setter Property="Foreground" Value="#FFD97706"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Level}" Value="Advanced">
                                                                    <Setter Property="Foreground" Value="#FFDC2626"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Topic Badge -->
                                            <Border Background="#FFECFDF5" 
                                                   Style="{StaticResource LevelBadgeStyle}"
                                                   Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Topic}" 
                                                          FontSize="11" FontWeight="Medium" 
                                                          Foreground="#FF059669"/>
                                            </Border>

                                            <!-- Question Count -->
                                            <TextBlock Margin="12,0,0,0" 
                                                      VerticalAlignment="Center">
                                                <Run Text="{Binding Options.Count, Mode=OneWay}" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="#FF374151"/>
                                                <Run Text="questions" 
                                                     Foreground="#FF6B7280" 
                                                     FontSize="12"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Start Button -->
                                    <Button Grid.Column="2" 
                                           Content="Start Quiz →" 
                                           Background="#FF6366F1"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="20,10"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Cursor="Hand"
                                           VerticalAlignment="Center"
                                           Command="{Binding DataContext.StartQuizCommand, 
                                                   RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF5855E8"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#FF4F46E5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>