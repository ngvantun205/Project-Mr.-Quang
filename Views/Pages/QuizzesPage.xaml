            <Button Content="Entertainment" Width="100" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="10,0"/>
            <Button Content="Geography" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="10,0"/>
            <Button Content="History" Width="80" Height="30" Style="{StaticResource HoverButtonStyle}" Margin="10,0"/>
