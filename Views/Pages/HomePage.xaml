<Page x:Class="TDEduEnglish.ViewModels.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.ViewModels"
      Background="Transparent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="61*" />
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="20 80 0 0">
            <TextBlock Text="Welcome, User!" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Start Learning" Command="{Binding StartLearningCommand}" Style="{StaticResource HoverButtonStyle}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
