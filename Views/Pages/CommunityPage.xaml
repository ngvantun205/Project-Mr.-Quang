<Page x:Class="TDEduEnglish.Views.Pages.CommunityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommunityPage">

    <DockPanel Background="White">

        <!-- 1️⃣ Header: Logo + Search Bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FFEEEEEE" Height="70" VerticalAlignment="Center">
            <!-- Logo App -->
            <Image Source="/Assets/logo.png" Width="50" Height="50" Margin="10,0,20,0"/>

            <!-- Search Bar với overlay TextBlock làm placeholder -->
            <Grid VerticalAlignment="Center">
                <TextBox x:Name="SearchBox" Width="400" Height="35" VerticalAlignment="Center" Padding="10" FontSize="16"/>
                <TextBlock x:Name="SearchPlaceholder" Text="Search..." Foreground="Gray" 
                           FontSize="16" Margin="15,0,0,0" VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>
        </StackPanel>

        <!-- 2️⃣ Menu ngang -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FFDDEEFF" Height="40">
            <Button Content="Post" Margin="5" Click="MenuButton_Click"/>
            <Button Content="Member" Margin="5" Click="MenuButton_Click"/>
            <Button Content="Discussion" Margin="5" Click="MenuButton_Click"/>
            <Button Content="Chat" Margin="5" Click="MenuButton_Click"/>
            <Button Content="Leaderboard" Margin="5" Click="MenuButton_Click"/>
            <Button Content="About" Margin="5" Click="MenuButton_Click"/>
        </StackPanel>

        <!-- 3️⃣ Main Frame -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Frame x:Name="CommunityMainFrame" NavigationUIVisibility="Hidden">
                
            </Frame>
        </ScrollViewer>

    </DockPanel>
</Page>
