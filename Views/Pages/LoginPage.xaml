<Page x:Class="TDEduEnglish.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="LoginPage">

    <Page.Resources>
        <!-- Modern Input Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Background" Value="#FFFCFCFD"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Background" Value="#FFFCFCFD"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6366F1" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFD1D5DB"/>
                                <Setter Property="Foreground" Value="#FF9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Social Button Style -->
        <Style x:Key="SocialButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF9FAFB"/>
                                <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF5855E8"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="Border" Width="20" Height="20" 
                                    Background="White" BorderBrush="#FFD1D5DB" 
                                    BorderThickness="2" CornerRadius="4" Margin="0,0,8,0">
                                <TextBlock x:Name="CheckMark" Text="✓" 
                                          FontSize="12" FontWeight="Bold"
                                          Foreground="White" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF6366F1"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8FAFC" Offset="0"/>
                <GradientStop Color="#FFF1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Illustration/Branding -->
        <Grid Grid.Column="0" >
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6366F1" Offset="0"/>
                    <GradientStop Color="#FF5855E8" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Margin="80">
                <!-- Logo -->
                <Border Background="White" CornerRadius="20" Width="100" Height="100" 
                        Margin="0,0,0,40" Opacity="0.95">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.1"/>
                    </Border.Effect>
                    <TextBlock Text="TD" FontSize="36" FontWeight="Bold" 
                              Foreground="#FF6366F1" HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Welcome Text -->
                <TextBlock Text="Chào mừng trở lại!" 
                          FontSize="32" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"
                          Margin="0,0,0,16"/>

                <TextBlock Text="Tiếp tục hành trình học tiếng Anh của bạn với TDEdu" 
                          FontSize="18" Foreground="White" 
                          HorizontalAlignment="Center" TextWrapping="Wrap"
                          TextAlignment="Center" Opacity="0.9"
                          LineHeight="26" Margin="0,0,0,40"/>

                <!-- Features -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="20" Width="40" Height="40" 
                                Margin="0,0,16,0" Opacity="0.9">
                            <TextBlock Text="🎯" FontSize="20" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Học tập cá nhân hóa" 
                                      FontSize="16" FontWeight="SemiBold" 
                                      Foreground="White"/>
                            <TextBlock Text="AI thích ứng theo khả năng của bạn" 
                                      FontSize="14" Foreground="White" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="20" Width="40" Height="40" 
                                Margin="0,0,16,0" Opacity="0.9">
                            <TextBlock Text="📱" FontSize="20" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Đồng bộ đa thiết bị" 
                                      FontSize="16" FontWeight="SemiBold" 
                                      Foreground="White"/>
                            <TextBlock Text="Học mọi lúc, mọi nơi" 
                                      FontSize="14" Foreground="White" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="White" CornerRadius="20" Width="40" Height="40" 
                                Margin="0,0,16,0" Opacity="0.9">
                            <TextBlock Text="🏆" FontSize="20" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Theo dõi tiến độ" 
                                      FontSize="16" FontWeight="SemiBold" 
                                      Foreground="White"/>
                            <TextBlock Text="Thống kê chi tiết và bảng xếp hạng" 
                                      FontSize="14" Foreground="White" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Decorative Elements -->
            <Ellipse Width="200" Height="200" Fill="White" Opacity="0.05"
                     HorizontalAlignment="Right" VerticalAlignment="Top"
                     Margin="0,-100,-100,0"/>
            <Ellipse Width="150" Height="150" Fill="White" Opacity="0.08"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Margin="-75,0,0,-75"/>
        </Grid>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel VerticalAlignment="Center" Margin="80,60,80,60"
                           MaxWidth="400">

                    <!-- Header -->
                    <StackPanel Margin="0,0,0,40">
                        <TextBlock Text="Đăng nhập" 
                                  FontSize="28" FontWeight="Bold" 
                                  Foreground="#FF1F2937" 
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Nhập thông tin để truy cập tài khoản của bạn" 
                                  FontSize="16" Foreground="#FF6B7280" 
                                  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Social Login -->
                    <StackPanel Margin="0,0,0,32">
                        <Button Style="{StaticResource SocialButtonStyle}" 
                               Command="{Binding GoogleLoginCommand}"
                               Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Tiếp tục với Google" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SocialButtonStyle}"
                               Command="{Binding FacebookLoginCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📘" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Tiếp tục với Facebook" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Divider -->
                    <Grid Margin="0,0,0,32">
                        <Separator Background="#FFE5E7EB"/>
                        <Border Background="White" Padding="16,0" 
                               HorizontalAlignment="Center">
                            <TextBlock Text="Hoặc đăng nhập bằng email" 
                                      FontSize="14" Foreground="#FF6B7280"/>
                        </Border>
                    </Grid>

                    <!-- Login Form -->
                    <StackPanel>
                        <!-- Email Field -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Email" 
                                      FontSize="14" FontWeight="Medium" 
                                      Foreground="#FF374151" 
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="EmailTextBox"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    Text="{Binding Email, Mode=TwoWay}"
                                    Tag="Nhập địa chỉ email của bạn"/>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Margin="0,0,0,24">
                            <Grid>
                                <TextBlock Text="Mật khẩu" 
                                          FontSize="14" FontWeight="Medium" 
                                          Foreground="#FF374151" 
                                          HorizontalAlignment="Left"/>
                                <Button Content="Quên mật khẩu?" 
                                       Style="{StaticResource LinkButtonStyle}"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       Command="{Binding ForgotPasswordCommand}"/>
                            </Grid>
                            <PasswordBox x:Name="PasswordBox"
                                        Style="{StaticResource ModernPasswordBoxStyle}"
                                        Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Remember Me -->
                        <CheckBox Content="Ghi nhớ đăng nhập" 
                                 Style="{StaticResource ModernCheckBoxStyle}"
                                 IsChecked="{Binding RememberMe, Mode=TwoWay}"
                                 Margin="0,0,0,32"/>

                        <!-- Login Button -->
                        <Button Content="Đăng nhập" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Command="{Binding LoginCommand}"
                               IsDefault="True"
                               Margin="0,0,0,24"/>

                        <!-- Sign Up Link -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <TextBlock Text="Chưa có tài khoản? " 
                                      FontSize="14" Foreground="#FF6B7280" 
                                      VerticalAlignment="Center"/>
                            <Button Content="Đăng ký ngay" 
                                   Style="{StaticResource LinkButtonStyle}"
                                   FontSize="14"
                                   Command="{Binding NavigateToRegisterCommand}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Terms -->
                    <TextBlock Margin="0,40,0,0" TextAlignment="Center"
                              FontSize="12" Foreground="#FF9CA3AF" 
                              TextWrapping="Wrap">
                        Bằng cách đăng nhập, bạn đồng ý với 
                        <Button Content="Điều khoản sử dụng" 
                               Style="{StaticResource LinkButtonStyle}" 
                               FontSize="12"/> và 
                        <Button Content="Chính sách bảo mật" 
                               Style="{StaticResource LinkButtonStyle}" 
                               FontSize="12"/> của chúng tôi.
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
