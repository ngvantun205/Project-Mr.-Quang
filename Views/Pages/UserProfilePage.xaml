<Page x:Class="TDEduEnglish.Views.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="UserProfilePage">

    <Page.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF000000" Direction="270" 
                                    ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF1F5F9"/>
            <Setter Property="Foreground" Value="#FF64748B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFF8FAFC"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="#FFE2E8F0" CornerRadius="4">
                            <Rectangle Name="PART_Track" Fill="#FF6366F1" 
                                     RadiusX="4" RadiusY="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FAFC" Offset="0"/>
                    <GradientStop Color="#FFF1F5F9" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Padding="40,32,40,24">
                <StackPanel>
                    <TextBlock Text="Hồ sơ người dùng" 
                              FontSize="32" FontWeight="Bold" 
                              Foreground="#FF1F2937" Margin="0,0,0,8"/>
                    <TextBlock Text="Quản lý thông tin cá nhân và theo dõi tiến trình học tập" 
                              FontSize="16" Foreground="#FF6B7280"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="40,0,40,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <!-- Profile Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Profile Picture Section -->
                            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
                                <Border Width="120" Height="120" CornerRadius="60" 
                                       Background="#FF6366F1" Margin="0,0,0,16">
                                    <TextBlock Text="TD" FontSize="36" FontWeight="Bold" 
                                              Foreground="White" HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>
                                <Button Content="Thay đổi ảnh" Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>

                            <!-- User Info -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                                <TextBlock Text="Thông tin cá nhân" FontSize="18" FontWeight="SemiBold" 
                                          Foreground="#FF1F2937" Margin="0,0,0,16"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                                        <TextBlock Text="Họ và tên" FontSize="14" FontWeight="Medium" 
                                                  Foreground="#FF374151" Margin="0,0,0,6"/>
                                        <TextBox Text="Trương Duy" Style="{StaticResource ModernTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                                        <TextBlock Text="Email" FontSize="14" FontWeight="Medium" 
                                                  Foreground="#FF374151" Margin="0,0,0,6"/>
                                        <TextBox Text="truongduy@gmail.com" Style="{StaticResource ModernTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                                        <TextBlock Text="Số điện thoại" FontSize="14" FontWeight="Medium" 
                                                  Foreground="#FF374151" Margin="0,0,0,6"/>
                                        <TextBox Text="+84 123 456 789" Style="{StaticResource ModernTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Margin="0,0,0,16">
                                        <TextBlock Text="Ngày sinh" FontSize="14" FontWeight="Medium" 
                                                  Foreground="#FF374151" Margin="0,0,0,6"/>
                                        <DatePicker Height="44" FontSize="14" Margin="0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Cập nhật" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0"/>
                                <Button Content="Hủy" Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Settings Card -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Cài đặt" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937" Margin="0,0,0,16"/>

                            <StackPanel>
                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Thông báo email" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Nhận thông báo về tiến trình học tập" 
                                                      FontSize="12" Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Âm thanh" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Phát âm thanh khi hoàn thành bài tập" 
                                                      FontSize="12" Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Chế độ tối" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Sử dụng giao diện tối" 
                                                      FontSize="12" Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" IsChecked="False" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    <!-- Learning Progress Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Tiến trình học tập" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937" Margin="0,0,0,16"/>

                            <!-- Level Progress -->
                            <Border Background="#FFF8FAFC" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Trình độ hiện tại" FontSize="14" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Trung cấp (B1)" FontSize="20" FontWeight="Bold" 
                                                      Foreground="#FF6366F1"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="#FF10B981" CornerRadius="20" 
                                               Padding="12,6">
                                            <TextBlock Text="Level 5" FontSize="12" FontWeight="SemiBold" 
                                                      Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <StackPanel Margin="0,0,0,8">
                                        <Grid Margin="0,0,0,4">
                                            <TextBlock Text="XP: 2,340 / 3,000" FontSize="12" Foreground="#FF6B7280" HorizontalAlignment="Left"/>
                                            <TextBlock Text="78%" FontSize="12" Foreground="#FF6B7280" HorizontalAlignment="Right"/>
                                        </Grid>
                                        <ProgressBar Value="78" Maximum="100" Style="{StaticResource ModernProgressBarStyle}"/>
                                    </StackPanel>

                                    <TextBlock Text="Còn 660 XP để lên level tiếp theo!" 
                                              FontSize="12" Foreground="#FF10B981" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Statistics -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FFF3F4F6" CornerRadius="10" 
                                       Padding="16,20" Margin="0,0,8,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="42" FontSize="24" FontWeight="Bold" 
                                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Ngày streak" FontSize="12" 
                                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#FFF3F4F6" CornerRadius="10" 
                                       Padding="16,20" Margin="8,0,0,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="156" FontSize="24" FontWeight="Bold" 
                                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Bài hoàn thành" FontSize="12" 
                                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Achievements Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Thành tựu" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937" Margin="0,0,0,16"/>

                            <StackPanel>
                                <!-- Achievement Item -->
                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Background="#FFF59E0B" CornerRadius="20" 
                                               Width="36" Height="36" Margin="0,0,12,0">
                                            <TextBlock Text="🏆" FontSize="16" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Streaker" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Học liên tục 30 ngày" FontSize="12" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="✓" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#FF10B981" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Background="#FF6366F1" CornerRadius="20" 
                                               Width="36" Height="36" Margin="0,0,12,0">
                                            <TextBlock Text="📚" FontSize="16" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Scholar" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Hoàn thành 100 bài học" FontSize="12" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="✓" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#FF10B981" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="10" Padding="16,12" Opacity="0.6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Background="#FFE2E8F0" CornerRadius="20" 
                                               Width="36" Height="36" Margin="0,0,12,0">
                                            <TextBlock Text="🎯" FontSize="16" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Perfectionist" FontWeight="Medium" 
                                                      Foreground="#FF374151"/>
                                            <TextBlock Text="Đạt 100% trong 50 bài quiz" FontSize="12" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="23/50" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#FF6B7280" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Recent Activity Card -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Hoạt động gần đây" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FF1F2937" Margin="0,0,0,16"/>

                            <StackPanel>
                                <Border Background="#FFF8FAFC" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Hoàn thành bài 'Present Perfect Tense'" 
                                                      FontWeight="Medium" FontSize="13" Foreground="#FF374151"/>
                                            <TextBlock Text="Grammar - Level 5" FontSize="11" 
                                                      Foreground="#FF6B7280"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="2h trước" FontSize="11" 
                                                  Foreground="#FF6B7280" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Đạt điểm cao trong Quiz 'Vocabulary'" 
                                                      FontWeight="Medium" FontSize="13" Foreground="#FF374151"/>
                                            <TextBlock Text="95/100 điểm" FontSize="11" 
                                                      Foreground="#FF10B981"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="1 ngày" FontSize="11" 
                                                  Foreground="#FF6B7280" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF8FAFC" CornerRadius="8" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Mở khóa thành tựu 'Streaker'" 
                                                      FontWeight="Medium" FontSize="13" Foreground="#FF374151"/>
                                            <TextBlock Text="30 ngày học liên tục" FontSize="11" 
                                                      Foreground="#FFF59E0B"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="2 ngày" FontSize="11" 
                                                  Foreground="#FF6B7280" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
