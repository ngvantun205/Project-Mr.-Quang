<Page x:Class="TDEduEnglish.Views.Pages.CoursesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="CoursesPage">

    <Page.Resources>
        <!-- Modern Card Style - đồng bộ với MainWindow -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" 
                                    ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style - đồng bộ với MainWindow -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5855E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style - đồng bộ với MainWindow -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6366F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8FAFC"/>
                                <Setter Property="BorderBrush" Value="#FF6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeView Item Style - hiện đại -->
        <Style x:Key="ModernTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#FF374151"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF6366F1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF3F4F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- Background gradient giống MainWindow -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8FAFC" Offset="0"/>
                <GradientStop Color="#FFF1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Header Section -->
        <StackPanel Margin="40,20,40,0" VerticalAlignment="Top">
            <TextBlock Text="Courses" FontSize="36" FontWeight="Bold" 
                      Foreground="#FF1F2937" Margin="0,0,0,8"/>
            <TextBlock Text="Choose the course that suits your level" 
                      FontSize="16" Foreground="#FF6B7280" Margin="0,0,0,32"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Margin="40,120,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Course Navigation -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" 
                   Margin="0,0,20,0" VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Hidden" Padding="0 0 0 0">
                    <StackPanel>
                        <!-- Search Box -->
                        <Border Background="#FFF9FAFB" CornerRadius="8" 
                               Padding="12,8" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="16" Width="20" Margin="0,0,8,0" 
                                          VerticalAlignment="Center"/>
                                <TextBox Background="Transparent" BorderThickness="0" Width="200"
                                        Text="Find courses..." 
                                        Foreground="#FF9CA3AF" FontSize="14"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Modern Navigation Sidebar -->
                        <StackPanel>
                            <!-- Skills Category -->
                            <StackPanel Margin="0,0,0,24">
                                <!-- Category Header -->
                                <Border Background="#FFF3F4F6" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FF6366F1" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                            <TextBlock Text="🎯" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Basic skills" FontSize="16" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Skills Items -->
                                <StackPanel>
                                    <Button Name="ListeningBtn" Command="{Binding ListeningCommand}"  Tag="Listening"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFECFDF5" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="👂" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Listening" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="SpeakingBtn" Command="{Binding SpeakingCommand}"  Tag="Speaking"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFFEF7E7" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="🗣️" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Speaking" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="ReadingBtn" Command="{Binding ReadingCommand}"  Tag="Reading"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFEFF6FF" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="📖" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Reading" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="WritingBtn" Command="{Binding WritingCommand}" Tag="Writing"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFF5F3FF" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="✍️" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Writing" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>

                            <!-- Vocabulary & Grammar Category -->
                            <StackPanel Margin="0,0,0,24">
                                <!-- Category Header -->
                                <Border Background="#FFF3F4F6" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FF10B981" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                            <TextBlock Text="📚" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Vocabulary and Grammar" FontSize="15" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Vocabulary button -->
                                <StackPanel>
                                    <Button Name="VocabularyBtn" Command="{Binding VocabularyCommand}"  Tag="Vocabulary"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFECFDF5" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="📝" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Vocabulary" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!--<Button Name="VocabularyBtn" Command="{Binding VocabularyCommand}" Tag="Vocabulary"
                                               Style="{StaticResource SecondaryButtonStyle}" 
                                               HorizontalContentAlignment="Left" Margin="0,0,0,4"
                                               ToolTip="Intermediate Vocabulary" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFECFDF5" CornerRadius="4" Width="20" Height="20" Margin="0,0,8,0">
                                                <TextBlock Text="📝 " FontSize="10" FontWeight="Bold" Foreground="#FF6366F1"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Vocabulary" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>-->
                                    <!-- Grammar button -->
                                    <Button Name="GrammarBtn" Command="{Binding GrammarCommand}" Tag="Grammar"
                                               Style="{StaticResource SecondaryButtonStyle}" 
                                               HorizontalContentAlignment="Left" Margin="0,0,0,4"
                                               ToolTip="Intermediate Grammar" Width="210">
                                            <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFECFDF5" CornerRadius="4" Width="20" Height="20" Margin="0,0,8,0">
                                                <TextBlock Text="⚙️ " FontSize="10" FontWeight="Bold" Foreground="#FF6366F1"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="Grammar" FontSize="13" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                </StackPanel>

                               
                               
                            </StackPanel>

                            <!-- Advanced Courses Category -->
                            <StackPanel>
                                <!-- Category Header -->
                                <Border Background="#FFF3F4F6" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FFF59E0B" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                            <TextBlock Text="🚀" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Advanced Courses" FontSize="16" FontWeight="SemiBold" 
                                                  Foreground="#FF1F2937" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Advanced Course Items -->
                                <StackPanel>
                                    <Button Name="BusinessEnglishBtn"  Tag="BusinessEnglish"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFF5F3FF" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="💼" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Business English" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="AcademicEnglishBtn"  Tag="AcademicEnglish"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFECFDF5" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="🎓" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Academic English" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="IELTSBtn"  Tag="IELTS"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFFEF7E7" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="📊" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="IELTS Preparation" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Name="TOEFLBtn"  Tag="TOEFL"
                                           Style="{StaticResource SecondaryButtonStyle}" 
                                           HorizontalContentAlignment="Left" Margin="0,0,0,4" Width="210">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFEFF6FF" CornerRadius="4" Width="24" Height="24" Margin="0,0,8,0">
                                                <TextBlock Text="📋" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="TOEIC Preparation" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" 
                   VerticalAlignment="Stretch">
                <Grid>
                    <!-- Frame cho lesson content -->
                    

                    <!-- Default Welcome Content -->
                    <Grid x:Name="DefaultContentGrid">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Hero Icon -->
                            <Border Background="#FF6366F1" CornerRadius="50" 
                                   Width="100" Height="100" Margin="0,0,0,24">
                                <TextBlock Text="📚" FontSize="48" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Welcome Text -->
                            <TextBlock Text="Welcome to courses" 
                                      FontSize="32" FontWeight="Bold" 
                                      Foreground="#FF1F2937" TextAlignment="Center"
                                      Margin="0,0,0,12"/>

                            <TextBlock Text="Select a lesson from the menu on the left to start your learning journey." 
                                      FontSize="16" Foreground="#FF6B7280" 
                                      TextAlignment="Center" TextWrapping="Wrap"
                                      MaxWidth="400" LineHeight="24"
                                      Margin="0,0,0,32" Width="380"/>

                            <!-- Quick Action Buttons -->
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Start learning" FontSize="16" Height="44" Width="140"
                                       Style="{StaticResource PrimaryButtonStyle}" 
                                       Margin="0,0,12,0"/>
                                <Button Content="See instructions" FontSize="16" Height="44" Width="140"
                                       Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>

                            <!-- Progress Stats -->
                            <Border Background="#FFF9FAFB" CornerRadius="12" 
                                   Padding="24,16" Margin="0,40,0,0" MaxWidth="400">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="24" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#FF1F2937" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Courses" FontSize="12" 
                                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="85%" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#FF10B981" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Completed" FontSize="12" 
                                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="7.5" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#FFF59E0B" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Band" FontSize="12" 
                                                  Foreground="#FF6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Frame x:Name="CourseListFrame" NavigationUIVisibility="Hidden" 
                          Background="Transparent"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
