<Page x:Class="TDEduEnglish.Views.Pages.CoursesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TDEduEnglish.Views.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="CoursesPage">

    <Page.Resources>
        <!-- Course Card Style -->
        <Style x:Key="CourseCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" 
                                    BlurRadius="20" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4F46E5" Opacity="0.25" 
                                            BlurRadius="30" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="12,24,12,16"/>
        </Style>

        <!-- Course Title Style -->
        <Style x:Key="CourseTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="📚 Your Learning Path" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="#1E293B"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Choose a skill to start learning today" 
                          FontSize="16" 
                          Foreground="#64748B"/>
            </StackPanel>

            <!-- Four Skills Section -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="🎯 Four Essential Skills" 
                          Style="{StaticResource SectionTitleStyle}"/>

                <UniformGrid Columns="4" Rows="1">

                    <!-- Listening Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding ListeningCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#E0E7FF" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="🎧" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Listening" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Improve your listening comprehension with real-world exercises" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Speaking Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding SpeakingCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#D1FAE5" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="🎤" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Speaking" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Practice pronunciation and speak with confidence" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Reading Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding ReadingCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#FCE7F3" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="📰" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Reading" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Enhance reading skills through diverse passages and topics" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Writing Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding WritingCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#FED7AA" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="✍️" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Writing" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Develop academic and professional writing abilities" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>
            </StackPanel>

            <!-- Vocabulary & Grammar Section -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="📖 Vocabulary &amp; Grammar" 
                          Style="{StaticResource SectionTitleStyle}"/>

                <UniformGrid Columns="3" Rows="1">

                    <!-- Vocabulary Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding VocabularyCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#FEF3C7" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="📖" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Vocabulary" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Learn and memorize new words through engaging topics" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Grammar Course -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding GrammarCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#DBEAFE" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="✏️" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Grammar" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Master essential grammar structures and rules" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- My Vocabulary -->
                    <Border Style="{StaticResource CourseCardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                        Command="{Binding MyVocabularyCommand}"/>
                        </Border.InputBindings>
                        <StackPanel>
                            <Border Background="#E9D5FF" 
                                   CornerRadius="12" 
                                   Width="80" Height="80"
                                   Margin="0,0,0,16">
                                <TextBlock Text="⭐" 
                                         FontSize="40" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="My Vocabulary" Style="{StaticResource CourseTitleStyle}"/>
                            <TextBlock Text="Manage and review your saved vocabulary words" 
                                      Style="{StaticResource DescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
