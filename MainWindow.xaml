<Window x:Class="TDEduEnglish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDEduEnglish"
        mc:Ignorable="d"
        Title="EduLingua" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF89CFF0" Offset="0"/>
                <GradientStop Color="#FFFAF0E6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="35.5"/>
            <ColumnDefinition Width="564.5"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="4" Grid.Row="1" Opacity="0.5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="F:\admin\Download\college_student_reading-740629876.jpeg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Grid.Column="0" Margin="50,0,0,0" Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="F:\admin\Download\appstore icon.png" Width="40" Height="40"/>
            <TextBlock Text="TdEdu" FontSize="24" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
        </StackPanel>
        <Menu Grid.Column="2" Padding="6" FontSize="17" Background="Transparent" HorizontalAlignment="Left" Width="465" Margin="100,0,0,0">
            <MenuItem Header="Home" Command="{Binding NavigateCommand}" CommandParameter="HomePage"/>
            <MenuItem Header="Courses" Command="{Binding NavigateCommand}" CommandParameter="CoursesPage"/>
            <MenuItem Header="Quizzes" Command="{Binding NavigateCommand}" CommandParameter="QuizzesPage"/>
            <MenuItem Header="Community" Command="{Binding NavigateCommand}" CommandParameter="CommunityPage"/>
            <MenuItem Header="Leaderboard" Command="{Binding NavigateCommand}" CommandParameter="LeaderboardPage"/>
        </Menu>

        <StackPanel Grid.Column="2"   Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.ColumnSpan="2" Width="278">
            <Button Content="Login" FontSize="15" Width="70" Command="{Binding LoginCommand}" Margin="10" Style="{StaticResource HoverButtonStyle}"/>
            <Button Content="Register" FontSize="15" Width="70" Command="{Binding RegisterCommand}" Margin="10" Style="{StaticResource HoverButtonStyle}"/>
            <Button Margin="10 10 20 10" Content="Logout" Width="70" FontSize="15" Command="{Binding LogoutCommand}" Style="{StaticResource HoverButtonStyle}" 
                     Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.ColumnSpan="4">
            <!-- Background nhạt màu -->


            <!-- Nội dung Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="61*" />
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="20 80 0 0">
                    <TextBlock Text="Welcome, User!" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    <Button Content="Start Learning" Command="{Binding StartLearningCommand}" Style="{StaticResource HoverButtonStyle}" Margin="0,0,0,10"/>
                </StackPanel>

                <Frame x:Name="MainFrame" Grid.Column="0" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>



    </Grid>
</Window>
